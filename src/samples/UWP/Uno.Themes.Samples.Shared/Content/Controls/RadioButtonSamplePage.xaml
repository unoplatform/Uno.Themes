<Page x:Class="Uno.Themes.Samples.Content.Controls.RadioButtonSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:local="using:Uno.Themes.Samples.Shared.Content"
	  xmlns:sample="using:Uno.Themes.Samples"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:android="http://uno.ui/android"
	  xmlns:ios="http://uno.ui/ios"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:smtx="using:ShowMeTheXAML"
	  mc:Ignorable="d android ios">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<sample:SamplePageLayout>
			<sample:SamplePageLayout.MaterialTemplate>
				<DataTemplate>
					<StackPanel>

						<!-- Primary -->
						<TextBlock Text="Primary"
								   Style="{StaticResource MaterialSubtitle2}"
								   Margin="12,16,12,4" />

						<!-- RadioButton OFF -->
						<smtx:XamlDisplay UniqueKey="Material_RadioButtonSamplePage_Unchecked">
							<RadioButton GroupName="Material_Primary_a"
										 Content="UNCHECKED"
										 Style="{StaticResource MaterialRadioButtonStyle}" />
						</smtx:XamlDisplay>

						<!-- RadioButton ON -->
						<smtx:XamlDisplay UniqueKey="Material_RadioButtonSamplePage_Checked">
							<RadioButton GroupName="Material_Primary_a"
										 Content="CHECKED"
										 Style="{StaticResource MaterialRadioButtonStyle}"
										 IsChecked="True" />
						</smtx:XamlDisplay>

						<!-- RadioButton OFF Disabled -->
						<smtx:XamlDisplay UniqueKey="Material_RadioButtonSamplePage_UncheckedDisabled">
							<RadioButton GroupName="Material_Primary_b"
										 Content="UNCHECKED DISABLED"
										 IsEnabled="False"
										 Style="{StaticResource MaterialRadioButtonStyle}" />
						</smtx:XamlDisplay>

						<!-- RadioButton ON Disabled -->
						<smtx:XamlDisplay UniqueKey="Material_RadioButtonSamplePage_CheckedDisabled">
							<RadioButton GroupName="Material_Primary_b"
										 Content="CHECKED DISABLED"
										 IsChecked="True"
										 IsEnabled="False"
										 Style="{StaticResource MaterialRadioButtonStyle}" />
						</smtx:XamlDisplay>

						<!-- Secondary -->
						<TextBlock Text="Secondary"
								   Style="{StaticResource MaterialSubtitle2}"
								   Margin="12,16,12,4" />

						<!-- RadioButton OFF -->
						<smtx:XamlDisplay UniqueKey="Material_RadioButtonSamplePage_SecondaryUnchecked">
							<RadioButton GroupName="Material_Secondary_a"
										 Content="UNCHECKED"
										 Style="{StaticResource MaterialSecondaryRadioButtonStyle}" />
						</smtx:XamlDisplay>

						<!-- RadioButton ON -->
						<smtx:XamlDisplay UniqueKey="Material_RadioButtonSamplePage_SecondaryChecked">
							<RadioButton GroupName="Material_Secondary_a"
										 Content="CHECKED"
										 Style="{StaticResource MaterialSecondaryRadioButtonStyle}"
										 IsChecked="True" />
						</smtx:XamlDisplay>

						<!-- RadioButton OFF Disabled -->
						<smtx:XamlDisplay UniqueKey="Material_RadioButtonSamplePage_SecondaryUncheckedDisabled">
							<RadioButton GroupName="Material_Secondary_b"
										 Content="UNCHECKED DISABLED"
										 IsEnabled="False"
										 Style="{StaticResource MaterialSecondaryRadioButtonStyle}" />
						</smtx:XamlDisplay>

						<!-- RadioButton ON Disabled -->
						<smtx:XamlDisplay UniqueKey="Material_RadioButtonSamplePage_SecondaryCheckedDisabled">
							<RadioButton GroupName="Material_Secondary_b"
										 Content="CHECKED DISABLED"
										 IsChecked="True"
										 IsEnabled="False"
										 Style="{StaticResource MaterialSecondaryRadioButtonStyle}" />
						</smtx:XamlDisplay>
					</StackPanel>
				</DataTemplate>
			</sample:SamplePageLayout.MaterialTemplate>
			<sample:SamplePageLayout.M3MaterialTemplate>
				<DataTemplate>
					<StackPanel>

						<!-- Primary -->
						<TextBlock Text="Primary"
								   Style="{StaticResource TitleSmall}"
								   Margin="12,16,12,4" />

						<!-- RadioButton OFF -->
						<smtx:XamlDisplay UniqueKey="M3Material_RadioButtonSamplePage_Unchecked">
							<RadioButton GroupName="Material_Primary_a"
										 Content="Unchecked"
										 Style="{StaticResource MaterialRadioButtonStyle}" />
						</smtx:XamlDisplay>

						<!-- RadioButton ON -->
						<smtx:XamlDisplay UniqueKey="M3Material_RadioButtonSamplePage_Checked">
							<RadioButton GroupName="Material_Primary_a"
										 Content="Checked"
										 Style="{StaticResource MaterialRadioButtonStyle}"
										 IsChecked="True" />
						</smtx:XamlDisplay>

						<!-- RadioButton OFF Disabled -->
						<smtx:XamlDisplay UniqueKey="M3Material_RadioButtonSamplePage_UncheckedDisabled">
							<RadioButton GroupName="Material_Primary_b"
										 Content="Unchecked Disabled"
										 IsEnabled="False"
										 Style="{StaticResource MaterialRadioButtonStyle}" />
						</smtx:XamlDisplay>

						<!-- RadioButton ON Disabled -->
						<smtx:XamlDisplay UniqueKey="M3Material_RadioButtonSamplePage_CheckedDisabled">
							<RadioButton GroupName="Material_Primary_b"
										 Content="Checked Disabled"
										 IsChecked="True"
										 IsEnabled="False"
										 Style="{StaticResource MaterialRadioButtonStyle}" />
						</smtx:XamlDisplay>
					</StackPanel>
				</DataTemplate>
			</sample:SamplePageLayout.M3MaterialTemplate>
			<sample:SamplePageLayout.CupertinoTemplate>
				<DataTemplate>
					<StackPanel>

						<!-- RadioButton OFF -->
						<smtx:XamlDisplay UniqueKey="Cupertino_RadioButtonSamplePage_Unchecked">
							<RadioButton GroupName="Cupertino_Primary_a"
										 Content="UNCHECKED"
										 Style="{StaticResource CupertinoRadioButtonStyle}" />
						</smtx:XamlDisplay>

						<!-- RadioButton ON -->
						<smtx:XamlDisplay UniqueKey="Cupertino_RadioButtonSamplePage_Checked">
							<RadioButton GroupName="Cupertino_Primary_a"
										 Content="CHECKED"
										 Style="{StaticResource CupertinoRadioButtonStyle}"
										 IsChecked="True" />
						</smtx:XamlDisplay>

						<!-- RadioButton OFF Disabled -->
						<smtx:XamlDisplay UniqueKey="Cupertino_RadioButtonSamplePage_UncheckedDisabled">
							<RadioButton GroupName="Cupertino_Primary_b"
										 Content="UNCHECKED DISABLED"
										 IsEnabled="False"
										 Style="{StaticResource CupertinoRadioButtonStyle}" />
						</smtx:XamlDisplay>

						<!-- RadioButton ON Disabled -->
						<smtx:XamlDisplay UniqueKey="Cupertino_RadioButtonSamplePage_CheckedDisabled">
							<RadioButton GroupName="Cupertino_Primary_b"
										 Content="CHECKED DISABLED"
										 IsChecked="True"
										 IsEnabled="False"
										 Style="{StaticResource CupertinoRadioButtonStyle}" />
						</smtx:XamlDisplay>

					</StackPanel>
				</DataTemplate>
			</sample:SamplePageLayout.CupertinoTemplate>
			<sample:SamplePageLayout.SimpleTemplate>
				<DataTemplate>
					<StackPanel>

						<!-- RadioButton No Content -->
						<smtx:XamlDisplay Margin="12,0"
										  UniqueKey="Simple_RadioButtonSamplePage_NoContent">
							<RadioButton GroupName="Simple_Group_a"
										 Style="{StaticResource SimpleRadioButtonStyle}" />
						</smtx:XamlDisplay>

						<!-- RadioButton Unchecked -->
						<smtx:XamlDisplay Margin="12,0"
										  UniqueKey="Simple_RadioButtonSamplePage_Unchecked">
							<RadioButton GroupName="Simple_Group_b"
										 Content="UNCHECKED"
										 Style="{StaticResource SimpleRadioButtonStyle}" />
						</smtx:XamlDisplay>

						<!-- RadioButton Checked -->
						<smtx:XamlDisplay Margin="12,0"
										  UniqueKey="Simple_RadioButtonSamplePage_Checked">
							<RadioButton GroupName="Simple_Group_b"
										 Content="CHECKED"
										 IsChecked="True"
										 Style="{StaticResource SimpleRadioButtonStyle}" />
						</smtx:XamlDisplay>

						<!-- RadioButton Unchecked Disabled -->
						<smtx:XamlDisplay Margin="12,0"
										  UniqueKey="Simple_RadioButtonSamplePage_UncheckedDisabled">
							<RadioButton GroupName="Simple_Group_c"
										 Content="UNCHECKED DISABLED"
										 IsEnabled="False"
										 Style="{StaticResource SimpleRadioButtonStyle}" />
						</smtx:XamlDisplay>

						<!-- RadioButton Checked Disabled -->
						<smtx:XamlDisplay Margin="12,0"
										  UniqueKey="Simple_RadioButtonSamplePage_CheckedDisabled">
							<RadioButton GroupName="Simple_Group_c"
										 Content="CHECKED DISABLED"
										 IsChecked="True"
										 IsEnabled="False"
										 Style="{StaticResource SimpleRadioButtonStyle}" />
						</smtx:XamlDisplay>

						<!-- RadioButton Group -->
						<smtx:XamlDisplay Margin="12,0"
										  UniqueKey="Simple_RadioButtonSamplePage_Group">
							<StackPanel>
								<TextBlock Text="Select an option:"
										   FontFamily="{StaticResource SimpleFontFamily}"
										   FontSize="14"
										   Margin="0,0,0,8" />
								<RadioButton GroupName="Simple_Options"
											 Content="Option 1"
											 IsChecked="True"
											 Style="{StaticResource SimpleRadioButtonStyle}" />
								<RadioButton GroupName="Simple_Options"
											 Content="Option 2"
											 Style="{StaticResource SimpleRadioButtonStyle}" />
								<RadioButton GroupName="Simple_Options"
											 Content="Option 3"
											 Style="{StaticResource SimpleRadioButtonStyle}" />
							</StackPanel>
						</smtx:XamlDisplay>

					</StackPanel>
				</DataTemplate>
			</sample:SamplePageLayout.SimpleTemplate>
		</sample:SamplePageLayout>
	</Grid>
</Page>
