<Page x:Class="Uno.Themes.Samples.Content.Controls.PersonPictureSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:sample="using:Uno.Themes.Samples"
	  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	  xmlns:um="using:Uno.Material"
	  xmlns:us="using:Uno.Simple"
	  xmlns:ut="using:Uno.Themes"
	  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	  xmlns:smtx="using:ShowMeTheXAML"
	  mc:Ignorable="d">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<sample:SamplePageLayout>
			<sample:SamplePageLayout.SimpleTemplate>
				<DataTemplate>
					<StackPanel Spacing="16">

						<!-- PersonPicture with Initials - Medium Circle (Default) -->
						<smtx:XamlDisplay UniqueKey="Simple_PersonPicture_InitialsMedium"
										  Style="{StaticResource XamlDisplayBelowStyle}">
							<PersonPicture Initials="AB"
										   Style="{StaticResource SimplePersonPictureStyle}" />
						</smtx:XamlDisplay>

						<!-- PersonPicture with Initials - Small Circle -->
						<smtx:XamlDisplay UniqueKey="Simple_PersonPicture_InitialsSmall"
										  Style="{StaticResource XamlDisplayBelowStyle}">
							<PersonPicture Initials="CD"
										   Style="{StaticResource SimplePersonPictureSmallStyle}" />
						</smtx:XamlDisplay>

						<!-- PersonPicture with Initials - Large Circle -->
						<smtx:XamlDisplay UniqueKey="Simple_PersonPicture_InitialsLarge"
										  Style="{StaticResource XamlDisplayBelowStyle}">
							<PersonPicture Initials="EF"
										   Style="{StaticResource SimplePersonPictureLargeStyle}" />
						</smtx:XamlDisplay>

						<!-- PersonPicture with Photo - Medium Circle -->
						<smtx:XamlDisplay UniqueKey="Simple_PersonPicture_PhotoMedium"
										  Style="{StaticResource XamlDisplayBelowStyle}">
							<PersonPicture ProfilePicture="https://picsum.photos/200"
										   Initials="GH"
										   Style="{StaticResource SimplePersonPictureStyle}" />
						</smtx:XamlDisplay>

						<!-- PersonPicture Square - Medium -->
						<smtx:XamlDisplay UniqueKey="Simple_PersonPicture_SquareMedium"
										  Style="{StaticResource XamlDisplayBelowStyle}">
							<PersonPicture Initials="IJ"
										   Style="{StaticResource SimplePersonPictureSquareStyle}" />
						</smtx:XamlDisplay>

						<!-- PersonPicture Square - Small -->
						<smtx:XamlDisplay UniqueKey="Simple_PersonPicture_SquareSmall"
										  Style="{StaticResource XamlDisplayBelowStyle}">
							<PersonPicture Initials="KL"
										   Style="{StaticResource SimplePersonPictureSquareSmallStyle}" />
						</smtx:XamlDisplay>

						<!-- PersonPicture Square - Large -->
						<smtx:XamlDisplay UniqueKey="Simple_PersonPicture_SquareLarge"
										  Style="{StaticResource XamlDisplayBelowStyle}">
							<PersonPicture Initials="MN"
										   Style="{StaticResource SimplePersonPictureSquareLargeStyle}" />
						</smtx:XamlDisplay>

						<!-- PersonPicture Square with Photo - Medium -->
						<smtx:XamlDisplay UniqueKey="Simple_PersonPicture_SquarePhotoMedium"
										  Style="{StaticResource XamlDisplayBelowStyle}">
							<PersonPicture ProfilePicture="https://picsum.photos/201"
										   Initials="OP"
										   Style="{StaticResource SimplePersonPictureSquareStyle}" />
						</smtx:XamlDisplay>

						<!-- PersonPicture with Badge -->
						<smtx:XamlDisplay UniqueKey="Simple_PersonPicture_Badge"
										  Style="{StaticResource XamlDisplayBelowStyle}">
							<PersonPicture Initials="QR"
										   BadgeNumber="5"
										   Style="{StaticResource SimplePersonPictureStyle}" />
						</smtx:XamlDisplay>

						<!-- Multiple sizes comparison -->
						<smtx:XamlDisplay UniqueKey="Simple_PersonPicture_SizeComparison"
										  Style="{StaticResource XamlDisplayBelowStyle}">
							<StackPanel Orientation="Horizontal" Spacing="16">
								<PersonPicture Initials="S"
											   Style="{StaticResource SimplePersonPictureSmallStyle}" />
								<PersonPicture Initials="M"
											   Style="{StaticResource SimplePersonPictureStyle}" />
								<PersonPicture Initials="L"
											   Style="{StaticResource SimplePersonPictureLargeStyle}" />
							</StackPanel>
						</smtx:XamlDisplay>

					</StackPanel>
				</DataTemplate>
			</sample:SamplePageLayout.SimpleTemplate>
		</sample:SamplePageLayout>
	</Grid>
</Page>
