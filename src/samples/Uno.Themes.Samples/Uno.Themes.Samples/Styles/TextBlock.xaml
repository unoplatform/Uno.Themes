<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Based on https://developer.apple.com/design/human-interface-guidelines/ios/visual-design/typography/#dynamic-type-sizes default style -->
	<Style x:Key="DefaultTextBlockStyle"
		   TargetType="TextBlock">
		<Setter Property="TextTrimming"
				Value="CharacterEllipsis" />
		<Setter Property="TextWrapping"
				Value="Wrap" />
	</Style>

	<Style TargetType="TextBlock"
		   BasedOn="{StaticResource DefaultTextBlockStyle}" />
</ResourceDictionary>
