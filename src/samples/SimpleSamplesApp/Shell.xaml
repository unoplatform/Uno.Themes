<UserControl x:Class="Uno.Themes.Simple.Samples.Shell"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <!-- 0: (reserved for visible padding), 1: nav-view -->
            <RowDefinition x:Name="TopPaddingRow" Height="0" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <muxc:NavigationView Grid.Row="1"
                             x:Name="NavigationViewControl"
                             IsBackEnabled="False"
                             IsBackButtonVisible="Collapsed"
                             IsPaneToggleButtonVisible="True"
                             PaneDisplayMode="Auto"
                             DisplayModeChanged="NavigationViewControl_DisplayModeChanged"
                             IsSettingsVisible="False"
                             IsTabStop="False">
            <muxc:NavigationView.PaneTitle>Simple Design Samples</muxc:NavigationView.PaneTitle>
            <muxc:NavigationView.PaneCustomContent>
                <ToggleButton x:Name="DarkLightModeToggle"
                              Content="Dark"
                              Click="ToggleButton_Click"
                              Margin="16,0,16,16"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Bottom"
                              HorizontalContentAlignment="Center" />
            </muxc:NavigationView.PaneCustomContent>
        </muxc:NavigationView>
    </Grid>
</UserControl>
