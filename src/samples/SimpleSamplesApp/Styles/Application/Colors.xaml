<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- App-level color overrides or additions for the Simple Design samples app -->
    <!-- These supplement the Simple theme colors -->

    <Color x:Key="SampleHeaderBackgroundColor">#F8F8F8</Color>
    <SolidColorBrush x:Key="SampleHeaderBackgroundBrush" Color="{StaticResource SampleHeaderBackgroundColor}" />

    <Color x:Key="SampleSectionBorderColor">#E0E0E0</Color>
    <SolidColorBrush x:Key="SampleSectionBorderBrush" Color="{StaticResource SampleSectionBorderColor}" />

</ResourceDictionary>
