<Page x:Class="Uno.Themes.Simple.Samples.Content.OverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Uno.Themes.Simple.Samples.Content"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="16" MaxWidth="800">
            <TextBlock Text="Simple Design System"
                       Style="{StaticResource SamplePageHeaderTextBlockStyle}" />

            <TextBlock Text="Welcome to the Simple Design System (SDS) sample app. This app showcases the controls and styles available in the Uno.Simple.WinUI theme library."
                       Style="{StaticResource SamplePageDescriptionTextBlockStyle}" />

            <TextBlock Text="Available Controls"
                       Style="{StaticResource SampleSectionHeaderTextBlockStyle}" />

            <TextBlock TextWrapping="Wrap"
                       Text="Use the navigation pane to browse the following control samples:" />

            <StackPanel Spacing="8" Margin="0,12,0,0">
                <TextBlock Text="• Button — Primary, Neutral, Subtle, and more variants with size options" />
                <TextBlock Text="• CheckBox — Simple-styled checkboxes" />
                <TextBlock Text="• RadioButton — Simple-styled radio buttons" />
                <TextBlock Text="• ToggleSwitch — Simple-styled toggle switches" />
                <TextBlock Text="• TextBox — Input and Outlined Input text field styles" />
                <TextBlock Text="• ComboBox — Select Field dropdown selection" />
                <TextBlock Text="• PersonPicture — Circle and Square avatar styles in S/M/L sizes" />
            </StackPanel>

            <TextBlock Text="Theme"
                       Style="{StaticResource SampleSectionHeaderTextBlockStyle}" />

        </StackPanel>
    </ScrollViewer>
</Page>
