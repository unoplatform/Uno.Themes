<Page x:Class="Uno.Themes.Simple.Samples.Content.Controls.CheckBoxSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:smtx="using:ShowMeTheXAML"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<ScrollViewer>
		<StackPanel Padding="24"
					Spacing="8"
					MaxWidth="800">
			<TextBlock Text="CheckBox"
					   Style="{StaticResource SamplePageHeaderTextBlockStyle}" />

			<!-- Basic CheckBox -->
			<TextBlock Text="Basic CheckBox"
					   Style="{StaticResource SampleSectionHeaderTextBlockStyle}" />
			<smtx:XamlDisplay UniqueKey="Simple_CheckBox_Unchecked">
				<CheckBox Content="Unchecked" />
			</smtx:XamlDisplay>
			<smtx:XamlDisplay UniqueKey="Simple_CheckBox_Checked">
				<CheckBox Content="Checked"
						  IsChecked="True" />
			</smtx:XamlDisplay>
			<smtx:XamlDisplay UniqueKey="Simple_CheckBox_Indeterminate">
				<CheckBox Content="Indeterminate"
						  IsChecked="{x:Null}"
						  IsThreeState="True" />
			</smtx:XamlDisplay>

			<!-- Disabled States -->
			<TextBlock Text="Disabled"
					   Style="{StaticResource SampleSectionHeaderTextBlockStyle}" />
			<smtx:XamlDisplay UniqueKey="Simple_CheckBox_DisabledUnchecked">
				<CheckBox Content="Disabled Unchecked"
						  IsEnabled="False" />
			</smtx:XamlDisplay>
			<smtx:XamlDisplay UniqueKey="Simple_CheckBox_DisabledChecked">
				<CheckBox Content="Disabled Checked"
						  IsChecked="True"
						  IsEnabled="False" />
			</smtx:XamlDisplay>
			<smtx:XamlDisplay UniqueKey="Simple_CheckBox_DisabledIndeterminate">
				<CheckBox Content="Disabled Indeterminate"
						  IsChecked="{x:Null}"
						  IsThreeState="True"
						  IsEnabled="False" />
			</smtx:XamlDisplay>
		</StackPanel>
	</ScrollViewer>
</Page>
