<Page x:Class="Uno.Themes.Simple.Samples.Content.Controls.RadioButtonSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:smtx="using:ShowMeTheXAML"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<ScrollViewer>
		<StackPanel Padding="24"
					Spacing="8"
					MaxWidth="800">
			<TextBlock Text="RadioButton"
					   Style="{StaticResource SamplePageHeaderTextBlockStyle}" />

			<!-- Basic RadioButtons -->
			<TextBlock Text="Basic RadioButtons"
					   Style="{StaticResource SampleSectionHeaderTextBlockStyle}" />
			<smtx:XamlDisplay UniqueKey="Simple_RadioButton_Basic">
				<StackPanel Spacing="12">
					<RadioButton Content="Option 1"
								 GroupName="Group1"
								 IsChecked="True" />
					<RadioButton Content="Option 2"
								 GroupName="Group1" />
					<RadioButton Content="Option 3"
								 GroupName="Group1" />
				</StackPanel>
			</smtx:XamlDisplay>

			<!-- Disabled States -->
			<TextBlock Text="Disabled"
					   Style="{StaticResource SampleSectionHeaderTextBlockStyle}" />
			<smtx:XamlDisplay UniqueKey="Simple_RadioButton_Disabled">
				<StackPanel Spacing="12">
					<RadioButton Content="Disabled Selected"
								 GroupName="Group2"
								 IsChecked="True"
								 IsEnabled="False" />
					<RadioButton Content="Disabled Unselected"
								 GroupName="Group2"
								 IsEnabled="False" />
				</StackPanel>
			</smtx:XamlDisplay>

			<!-- Horizontal Layout -->
			<TextBlock Text="Horizontal Layout"
					   Style="{StaticResource SampleSectionHeaderTextBlockStyle}" />
			<smtx:XamlDisplay UniqueKey="Simple_RadioButton_Horizontal">
				<StackPanel Orientation="Horizontal"
							Spacing="16">
					<RadioButton Content="A"
								 GroupName="Group3"
								 IsChecked="True" />
					<RadioButton Content="B"
								 GroupName="Group3" />
					<RadioButton Content="C"
								 GroupName="Group3" />
				</StackPanel>
			</smtx:XamlDisplay>
		</StackPanel>
	</ScrollViewer>
</Page>
