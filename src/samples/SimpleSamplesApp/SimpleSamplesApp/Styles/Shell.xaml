<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Shell-specific styles -->

    <!-- Sample page header style -->
    <Style x:Key="SamplePageHeaderTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <!-- Sample page description style -->
    <Style x:Key="SamplePageDescriptionTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Opacity" Value="0.7" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Margin" Value="0,0,0,24" />
    </Style>

    <!-- Section header style -->
    <Style x:Key="SampleSectionHeaderTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="0,24,0,12" />
    </Style>

    <!-- Sample item label style -->
    <Style x:Key="SampleItemLabelTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="Opacity" Value="0.6" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

</ResourceDictionary>
