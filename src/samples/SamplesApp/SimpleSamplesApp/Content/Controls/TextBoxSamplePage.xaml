<Page x:Class="Uno.Themes.Samples.Content.Controls.TextBoxSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:smtx="using:ShowMeTheXAML"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<ScrollViewer>
		<StackPanel Padding="16"
					Spacing="8">

			<TextBlock Text="Simple TextBox Styles"
					   Style="{StaticResource TitleLarge}"
					   Margin="0,0,0,16" />

			<!-- Filled Styles -->
			<TextBlock Text="Filled Style"
					   Style="{StaticResource TitleMedium}"
					   Margin="0,8,0,8" />

			<!-- TextBox Filled -->
			<smtx:XamlDisplay UniqueKey="Simple_TextBoxSamplePage_1"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBox Style="{StaticResource SimpleFilledTextBoxStyle}" />
			</smtx:XamlDisplay>

			<!-- TextBox Filled With PlaceholderText -->
			<smtx:XamlDisplay UniqueKey="Simple_TextBoxSamplePage_2"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBox PlaceholderText="Filled"
						 Style="{StaticResource SimpleFilledTextBoxStyle}" />
			</smtx:XamlDisplay>

			<!-- TextBox Filled With Text -->
			<smtx:XamlDisplay UniqueKey="Simple_TextBoxSamplePage_3"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBox Text="Filled with text"
						 Style="{StaticResource SimpleFilledTextBoxStyle}" />
			</smtx:XamlDisplay>

			<!-- TextBox Filled Disabled -->
			<smtx:XamlDisplay UniqueKey="Simple_TextBoxSamplePage_4"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBox PlaceholderText="Placeholder"
						 Text="Filled Disabled"
						 Style="{StaticResource SimpleFilledTextBoxStyle}"
						 IsEnabled="False" />
			</smtx:XamlDisplay>

			<!-- Outlined Styles -->
			<TextBlock Text="Outlined Style"
					   Style="{StaticResource TitleMedium}"
					   Margin="0,24,0,8" />

			<!-- TextBox Outlined -->
			<smtx:XamlDisplay UniqueKey="Simple_TextBoxSamplePage_5"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBox Style="{StaticResource SimpleOutlinedTextBoxStyle}" />
			</smtx:XamlDisplay>

			<!-- TextBox Outlined with PlaceholderText -->
			<smtx:XamlDisplay UniqueKey="Simple_TextBoxSamplePage_6"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBox PlaceholderText="Outlined"
						 Style="{StaticResource SimpleOutlinedTextBoxStyle}" />
			</smtx:XamlDisplay>

			<!-- TextBox Outlined Disabled -->
			<smtx:XamlDisplay UniqueKey="Simple_TextBoxSamplePage_7"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBox PlaceholderText="Placeholder"
						 Text="Outlined Disabled"
						 Style="{StaticResource SimpleOutlinedTextBoxStyle}"
						 IsEnabled="False" />
			</smtx:XamlDisplay>

			<!-- Size Variants -->
			<TextBlock Text="Size Variants"
					   Style="{StaticResource TitleMedium}"
					   Margin="0,24,0,8" />

			<!-- TextBox Filled Small -->
			<smtx:XamlDisplay UniqueKey="Simple_TextBoxSamplePage_8"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBox PlaceholderText="Small"
						 Style="{StaticResource SimpleFilledTextBoxSmallStyle}" />
			</smtx:XamlDisplay>

			<!-- MultiLine -->
			<TextBlock Text="MultiLine"
					   Style="{StaticResource TitleMedium}"
					   Margin="0,24,0,8" />

			<!-- TextBox Filled MultiLine -->
			<smtx:XamlDisplay UniqueKey="Simple_TextBoxSamplePage_9"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBox Text="Lorem ipsum dolor sit amet consectetur adipiscing elit."
						 PlaceholderText="MultiLine Filled"
						 Style="{StaticResource SimpleFilledTextBoxStyle}"
						 TextWrapping="Wrap"
						 AcceptsReturn="True"
						 Height="120" />
			</smtx:XamlDisplay>

		</StackPanel>
	</ScrollViewer>
</Page>
