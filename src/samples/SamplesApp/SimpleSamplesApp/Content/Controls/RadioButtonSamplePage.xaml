<Page x:Class="Uno.Themes.Samples.Content.Controls.RadioButtonSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:smtx="using:ShowMeTheXAML"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<ScrollViewer>
		<StackPanel Padding="16"
					Spacing="8">

			<TextBlock Text="Simple RadioButton Styles"
					   Style="{StaticResource TitleLarge}"
					   Margin="0,0,0,16" />

			<!-- RadioButton No Content -->
			<smtx:XamlDisplay UniqueKey="Simple_RadioButtonSamplePage_NoContent"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<RadioButton GroupName="Simple_Group_a"
							 Style="{StaticResource SimpleRadioButtonStyle}" />
			</smtx:XamlDisplay>

			<!-- RadioButton Unchecked -->
			<smtx:XamlDisplay UniqueKey="Simple_RadioButtonSamplePage_Unchecked"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<RadioButton GroupName="Simple_Group_b"
							 Content="UNCHECKED"
							 Style="{StaticResource SimpleRadioButtonStyle}" />
			</smtx:XamlDisplay>

			<!-- RadioButton Checked -->
			<smtx:XamlDisplay UniqueKey="Simple_RadioButtonSamplePage_Checked"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<RadioButton GroupName="Simple_Group_b"
							 Content="CHECKED"
							 IsChecked="True"
							 Style="{StaticResource SimpleRadioButtonStyle}" />
			</smtx:XamlDisplay>

			<!-- RadioButton Unchecked Disabled -->
			<smtx:XamlDisplay UniqueKey="Simple_RadioButtonSamplePage_UncheckedDisabled"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<RadioButton GroupName="Simple_Group_c"
							 Content="UNCHECKED DISABLED"
							 IsEnabled="False"
							 Style="{StaticResource SimpleRadioButtonStyle}" />
			</smtx:XamlDisplay>

			<!-- RadioButton Checked Disabled -->
			<smtx:XamlDisplay UniqueKey="Simple_RadioButtonSamplePage_CheckedDisabled"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<RadioButton GroupName="Simple_Group_c"
							 Content="CHECKED DISABLED"
							 IsChecked="True"
							 IsEnabled="False"
							 Style="{StaticResource SimpleRadioButtonStyle}" />
			</smtx:XamlDisplay>

			<TextBlock Text="Radio Button Group"
					   Style="{StaticResource TitleMedium}"
					   Margin="0,24,0,8" />

			<!-- RadioButton Group -->
			<smtx:XamlDisplay UniqueKey="Simple_RadioButtonSamplePage_Group"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Select an option:"
							   Style="{StaticResource BodyMedium}"
							   Margin="0,0,0,8" />
					<RadioButton GroupName="Simple_Options"
								 Content="Option 1"
								 IsChecked="True"
								 Style="{StaticResource SimpleRadioButtonStyle}" />
					<RadioButton GroupName="Simple_Options"
								 Content="Option 2"
								 Style="{StaticResource SimpleRadioButtonStyle}" />
					<RadioButton GroupName="Simple_Options"
								 Content="Option 3"
								 Style="{StaticResource SimpleRadioButtonStyle}" />
				</StackPanel>
			</smtx:XamlDisplay>

		</StackPanel>
	</ScrollViewer>
</Page>
