<Page x:Class="Uno.Themes.Samples.Content.Controls.ButtonSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:smtx="using:ShowMeTheXAML"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<ScrollViewer>
		<StackPanel Padding="16"
					Spacing="8">

			<TextBlock Text="Simple Button Styles"
					   Style="{StaticResource TitleLarge}"
					   Margin="0,0,0,16" />

			<!-- Filled Button -->
			<smtx:XamlDisplay UniqueKey="Simple_ButtonSamplePage_Filled"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<Button Content="FILLED"
						Style="{StaticResource SimpleFilledButtonStyle}"
						Margin="5" />
			</smtx:XamlDisplay>

			<!-- Filled Button Disabled -->
			<smtx:XamlDisplay UniqueKey="Simple_ButtonSamplePage_FilledDisabled"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<Button Content="DISABLED"
						IsEnabled="False"
						Style="{StaticResource SimpleFilledButtonStyle}"
						Margin="5" />
			</smtx:XamlDisplay>

			<!-- Outlined Button -->
			<smtx:XamlDisplay UniqueKey="Simple_ButtonSamplePage_Outlined"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<Button Content="OUTLINED"
						Style="{StaticResource SimpleOutlinedButtonStyle}"
						Margin="5" />
			</smtx:XamlDisplay>

			<!-- Outlined Button Disabled -->
			<smtx:XamlDisplay UniqueKey="Simple_ButtonSamplePage_OutlinedDisabled"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<Button Content="DISABLED"
						IsEnabled="False"
						Style="{StaticResource SimpleOutlinedButtonStyle}"
						Margin="5" />
			</smtx:XamlDisplay>

			<!-- Text Button -->
			<smtx:XamlDisplay UniqueKey="Simple_ButtonSamplePage_Text"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<Button Content="TEXT"
						Style="{StaticResource SimpleTextButtonStyle}"
						Margin="5" />
			</smtx:XamlDisplay>

			<!-- Text Button Disabled -->
			<smtx:XamlDisplay UniqueKey="Simple_ButtonSamplePage_TextDisabled"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<Button Content="DISABLED"
						IsEnabled="False"
						Style="{StaticResource SimpleTextButtonStyle}"
						Margin="5" />
			</smtx:XamlDisplay>

			<TextBlock Text="Error Styles"
					   Style="{StaticResource TitleMedium}"
					   Margin="0,24,0,8" />

			<!-- Error Filled Button -->
			<smtx:XamlDisplay UniqueKey="Simple_ButtonSamplePage_ErrorFilled"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<Button Content="ERROR"
						Style="{StaticResource SimpleFilledErrorButtonStyle}"
						Margin="5" />
			</smtx:XamlDisplay>

			<!-- Error Text Button -->
			<smtx:XamlDisplay UniqueKey="Simple_ButtonSamplePage_ErrorText"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<Button Content="ERROR"
						Style="{StaticResource SimpleTextErrorButtonStyle}"
						Margin="5" />
			</smtx:XamlDisplay>

			<TextBlock Text="Size Variants"
					   Style="{StaticResource TitleMedium}"
					   Margin="0,24,0,8" />

			<!-- Large Button -->
			<smtx:XamlDisplay UniqueKey="Simple_ButtonSamplePage_Large"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<Button Content="LARGE BUTTON"
						Style="{StaticResource SimpleFilledButtonLargeStyle}"
						Margin="5" />
			</smtx:XamlDisplay>

			<!-- Small Button -->
			<smtx:XamlDisplay UniqueKey="Simple_ButtonSamplePage_Small"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<Button Content="SMALL"
						Style="{StaticResource SimpleFilledButtonSmallStyle}"
						Margin="5" />
			</smtx:XamlDisplay>

		</StackPanel>
	</ScrollViewer>
</Page>
