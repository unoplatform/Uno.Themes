<Page x:Class="Uno.Themes.Samples.Content.Controls.CheckBoxSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:smtx="using:ShowMeTheXAML"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<ScrollViewer>
		<StackPanel Padding="16"
					Spacing="8">

			<TextBlock Text="Simple CheckBox Styles"
					   Style="{StaticResource TitleLarge}"
					   Margin="0,0,0,16" />

			<!-- CheckBox No Content -->
			<smtx:XamlDisplay UniqueKey="Simple_CheckBoxSamplePage_NoContent"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<CheckBox Style="{StaticResource SimpleCheckBoxStyle}" />
			</smtx:XamlDisplay>

			<!-- CheckBox Unchecked -->
			<smtx:XamlDisplay UniqueKey="Simple_CheckBoxSamplePage_Unchecked"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<CheckBox Content="Unchecked"
						  Style="{StaticResource SimpleCheckBoxStyle}" />
			</smtx:XamlDisplay>

			<!-- CheckBox Checked -->
			<smtx:XamlDisplay UniqueKey="Simple_CheckBoxSamplePage_Checked"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<CheckBox Content="Checked"
						  Style="{StaticResource SimpleCheckBoxStyle}"
						  IsChecked="True" />
			</smtx:XamlDisplay>

			<!-- CheckBox Indeterminate -->
			<smtx:XamlDisplay UniqueKey="Simple_CheckBoxSamplePage_Indeterminate"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<CheckBox Content="Indeterminate"
						  Style="{StaticResource SimpleCheckBoxStyle}"
						  IsThreeState="True"
						  IsChecked="{x:Null}" />
			</smtx:XamlDisplay>

			<!-- CheckBox Unchecked Disabled -->
			<smtx:XamlDisplay UniqueKey="Simple_CheckBoxSamplePage_UncheckedDisabled"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<CheckBox Content="Disabled"
						  Style="{StaticResource SimpleCheckBoxStyle}"
						  IsEnabled="False" />
			</smtx:XamlDisplay>

			<!-- CheckBox Checked Disabled -->
			<smtx:XamlDisplay UniqueKey="Simple_CheckBoxSamplePage_CheckedDisabled"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<CheckBox Content="Checked Disabled"
						  Style="{StaticResource SimpleCheckBoxStyle}"
						  IsEnabled="False"
						  IsChecked="True" />
			</smtx:XamlDisplay>

			<!-- CheckBox Indeterminate Disabled -->
			<smtx:XamlDisplay UniqueKey="Simple_CheckBoxSamplePage_IndeterminateDisabled"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<CheckBox Content="Indeterminate Disabled"
						  Style="{StaticResource SimpleCheckBoxStyle}"
						  IsEnabled="False"
						  IsThreeState="True"
						  IsChecked="{x:Null}" />
			</smtx:XamlDisplay>

		</StackPanel>
	</ScrollViewer>
</Page>
