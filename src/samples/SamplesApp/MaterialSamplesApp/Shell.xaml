<UserControl x:Class="Uno.Themes.Samples.Shell"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<Grid.RowDefinitions>
			<RowDefinition x:Name="TopPaddingRow" Height="0" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>

		<muxc:NavigationView Grid.Row="1"
							 x:Name="NavigationViewControl"
							 IsBackEnabled="False"
							 IsBackButtonVisible="Collapsed"
							 IsPaneToggleButtonVisible="True"
							 PaneDisplayMode="Auto"
							 DisplayModeChanged="NavigationViewControl_DisplayModeChanged"
							 IsSettingsVisible="False"
							 IsTabStop="False"
							 Style="{StaticResource MaterialNavigationViewStyle}">
			<muxc:NavigationView.PaneTitle>Material Samples</muxc:NavigationView.PaneTitle>
			<muxc:NavigationView.PaneCustomContent>
				<ToggleButton x:Name="DarkLightModeToggle"
							  Content="ðŸŒ™"
							  Click="ToggleButton_Click"
							  Margin="0,0,20,16"
							  HorizontalAlignment="Right"
							  VerticalAlignment="Bottom" />
			</muxc:NavigationView.PaneCustomContent>
		</muxc:NavigationView>
	</Grid>
</UserControl>
