<Page x:Class="Uno.Themes.Samples.Content.Controls.PipsPagerSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:smtx="using:ShowMeTheXAML"
	  xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<ScrollViewer>
		<StackPanel Padding="16"
					Spacing="8">

			<TextBlock Text="PipsPager Styles"
					   Style="{StaticResource TitleLarge}"
					   Margin="0,0,0,16" />

			<!--  Default PipsPager  -->
			<smtx:XamlDisplay UniqueKey="M3_Material_PipsPagerSamplePage"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Default" />
					<muxc:PipsPager Style="{StaticResource MaterialPipsPagerStyle}" />
				</StackPanel>
			</smtx:XamlDisplay>

			<!--  Horizontal with Navigation Buttons  -->
			<smtx:XamlDisplay UniqueKey="M3_Material_PipsPagerSamplePage_Horizontal_Navigation_Buttons"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Horizontal with Navigation Buttons" />
					<muxc:PipsPager NumberOfPages="5"
									SelectedPageIndex="2"
									PreviousButtonVisibility="Visible"
									NextButtonVisibility="Visible"
									Style="{StaticResource MaterialPipsPagerStyle}" />
				</StackPanel>
			</smtx:XamlDisplay>

			<!--  Vertical with Navigation Buttons  -->
			<smtx:XamlDisplay UniqueKey="M3_Material_PipsPagerSamplePage_Vertical_Navigation_Buttons"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Vertical with Navigation Buttons" />
					<muxc:PipsPager NumberOfPages="5"
									SelectedPageIndex="2"
									Orientation="Vertical"
									PreviousButtonVisibility="Visible"
									NextButtonVisibility="Visible"
									Style="{StaticResource MaterialPipsPagerStyle}" />
				</StackPanel>
			</smtx:XamlDisplay>

			<!--  Horizontal Disabled  -->
			<smtx:XamlDisplay UniqueKey="M3_Material_PipsPagerSamplePage_Horizontal_Navigation_Buttons_Disabled"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Horizontal Disabled" />
					<muxc:PipsPager IsEnabled="False"
									NumberOfPages="5"
									SelectedPageIndex="2"
									PreviousButtonVisibility="Visible"
									NextButtonVisibility="Visible"
									Style="{StaticResource MaterialPipsPagerStyle}" />
				</StackPanel>
			</smtx:XamlDisplay>

		</StackPanel>
	</ScrollViewer>
</Page>
