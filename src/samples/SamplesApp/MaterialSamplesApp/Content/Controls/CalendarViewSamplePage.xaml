<Page x:Class="Uno.Themes.Samples.Content.Controls.CalendarViewSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:smtx="using:ShowMeTheXAML"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<ScrollViewer>
		<StackPanel Padding="16"
					Spacing="8">

			<TextBlock Text="Calendar Styles"
					   Style="{StaticResource TitleLarge}"
					   Margin="0,0,0,16" />

			<!--  CalendarView  -->
			<smtx:XamlDisplay UniqueKey="M3Material_CalendarView"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="CalendarView" />
					<CalendarView SelectionMode="Multiple"
								  Style="{StaticResource MaterialCalendarViewStyle}" />
				</StackPanel>
			</smtx:XamlDisplay>

			<!--  CalendarDatePicker  -->
			<smtx:XamlDisplay UniqueKey="M3Material_CalendarDatePicker"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="CalendarDatePicker" />
					<CalendarDatePicker Header="Select"
										Style="{StaticResource MaterialCalendarDatePickerStyle}" />
				</StackPanel>
			</smtx:XamlDisplay>

		</StackPanel>
	</ScrollViewer>
</Page>
