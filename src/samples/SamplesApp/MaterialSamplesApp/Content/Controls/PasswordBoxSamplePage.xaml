<Page x:Class="Uno.Themes.Samples.Content.Controls.PasswordBoxSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:smtx="using:ShowMeTheXAML"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<ScrollViewer>
		<StackPanel Padding="16"
					Spacing="8">

			<TextBlock Text="PasswordBox Styles"
					   Style="{StaticResource TitleLarge}"
					   Margin="0,0,0,16" />

			<!--  Filled PasswordBox  -->
			<smtx:XamlDisplay UniqueKey="M3Material_PasswordBoxSamplePage_Filled"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Filled" />
					<PasswordBox Style="{StaticResource MaterialFilledPasswordBoxStyle}" />
				</StackPanel>
			</smtx:XamlDisplay>

			<!--  Filled with Header  -->
			<smtx:XamlDisplay UniqueKey="M3Material_PasswordBoxSamplePage_FilledHeader"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Filled with Header" />
					<PasswordBox Style="{StaticResource MaterialFilledPasswordBoxStyle}"
								 Header="Password" />
				</StackPanel>
			</smtx:XamlDisplay>

			<!--  Filled with Placeholder  -->
			<smtx:XamlDisplay UniqueKey="M3Material_PasswordBoxSamplePage_FilledPlaceholder"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Filled with Placeholder" />
					<PasswordBox Style="{StaticResource MaterialFilledPasswordBoxStyle}"
								 PlaceholderText="Enter password" />
				</StackPanel>
			</smtx:XamlDisplay>

			<!--  Filled with Header + Placeholder  -->
			<smtx:XamlDisplay UniqueKey="M3Material_PasswordBoxSamplePage_FilledBoth"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Filled with Header + Placeholder" />
					<PasswordBox Style="{StaticResource MaterialFilledPasswordBoxStyle}"
								 Header="Password"
								 PlaceholderText="Enter password" />
				</StackPanel>
			</smtx:XamlDisplay>

			<!--  Filled Disabled  -->
			<smtx:XamlDisplay UniqueKey="M3Material_PasswordBoxSamplePage_FilledDisabled"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Filled Disabled" />
					<PasswordBox Style="{StaticResource MaterialFilledPasswordBoxStyle}"
								 Password="Disabled"
								 IsEnabled="False" />
				</StackPanel>
			</smtx:XamlDisplay>

			<!--  Outlined PasswordBox  -->
			<smtx:XamlDisplay UniqueKey="M3Material_PasswordBoxSamplePage_Outlined"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Outlined" />
					<PasswordBox Style="{StaticResource MaterialOutlinedPasswordBoxStyle}" />
				</StackPanel>
			</smtx:XamlDisplay>

			<!--  Outlined with Header  -->
			<smtx:XamlDisplay UniqueKey="M3Material_PasswordBoxSamplePage_OutlinedHeader"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Outlined with Header" />
					<PasswordBox Style="{StaticResource MaterialOutlinedPasswordBoxStyle}"
								 Header="Password" />
				</StackPanel>
			</smtx:XamlDisplay>

			<!--  Outlined with Placeholder  -->
			<smtx:XamlDisplay UniqueKey="M3Material_PasswordBoxSamplePage_OutlinedPlaceholder"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Outlined with Placeholder" />
					<PasswordBox Style="{StaticResource MaterialOutlinedPasswordBoxStyle}"
								 PlaceholderText="Enter password" />
				</StackPanel>
			</smtx:XamlDisplay>

			<!--  Outlined Disabled  -->
			<smtx:XamlDisplay UniqueKey="M3Material_PasswordBoxSamplePage_OutlinedDisabled"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Outlined Disabled" />
					<PasswordBox Style="{StaticResource MaterialOutlinedPasswordBoxStyle}"
								 Password="Disabled"
								 IsEnabled="False" />
				</StackPanel>
			</smtx:XamlDisplay>

		</StackPanel>
	</ScrollViewer>
</Page>
