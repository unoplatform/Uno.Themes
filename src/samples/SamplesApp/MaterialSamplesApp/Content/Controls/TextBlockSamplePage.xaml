<Page x:Class="Uno.Themes.Samples.Content.Controls.TextBlockSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:smtx="using:ShowMeTheXAML"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<ScrollViewer>
		<StackPanel Padding="16"
					Spacing="8">

			<TextBlock Text="TextBlock Styles"
					   Style="{StaticResource TitleLarge}"
					   Margin="0,0,0,16" />

			<!-- Display Large -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_DisplayLarge"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Display Large"
						   Style="{StaticResource DisplayLarge}" />
			</smtx:XamlDisplay>

			<!-- Display Medium -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_DisplayMedium"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Display Medium"
						   Style="{StaticResource DisplayMedium}" />
			</smtx:XamlDisplay>

			<!-- Display Small -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_DisplaySmall"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Display Small"
						   Style="{StaticResource DisplaySmall}" />
			</smtx:XamlDisplay>

			<!-- Headline Large -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_HeadlineLarge"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Headline Large"
						   Style="{StaticResource HeadlineLarge}" />
			</smtx:XamlDisplay>

			<!-- Headline Medium -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_HeadlineMedium"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Headline Medium"
						   Style="{StaticResource HeadlineMedium}" />
			</smtx:XamlDisplay>

			<!-- Headline Small -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_HeadlineSmall"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Headline Small"
						   Style="{StaticResource HeadlineSmall}" />
			</smtx:XamlDisplay>

			<!-- Title Large -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_TitleLarge"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Title Large"
						   Style="{StaticResource TitleLarge}" />
			</smtx:XamlDisplay>

			<!-- Title Medium -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_TitleMedium"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Title Medium"
						   Style="{StaticResource TitleMedium}" />
			</smtx:XamlDisplay>

			<!-- Title Small -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_TitleSmall"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Title Small"
						   Style="{StaticResource TitleSmall}" />
			</smtx:XamlDisplay>

			<!-- Label Large -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_LabelLarge"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Label Large"
						   Style="{StaticResource LabelLarge}" />
			</smtx:XamlDisplay>

			<!-- Label Medium -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_LabelMedium"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Label Medium"
						   Style="{StaticResource LabelMedium}" />
			</smtx:XamlDisplay>

			<!-- Label Small -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_LabelSmall"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Label Small"
						   Style="{StaticResource LabelSmall}" />
			</smtx:XamlDisplay>

			<!-- Body Large -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_BodyLarge"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Body Large - Lorem ipsum dolor sit amet consectetur adipiscing elit"
						   Style="{StaticResource BodyLarge}" />
			</smtx:XamlDisplay>

			<!-- Body Medium -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_BodyMedium"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Body Medium - Lorem ipsum dolor sit amet consectetur adipiscing elit"
						   Style="{StaticResource MaterialBodyMedium}" />
			</smtx:XamlDisplay>

			<!-- Body Small -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_BodySmall"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Body Small - Lorem ipsum dolor sit amet consectetur adipiscing elit"
						   Style="{StaticResource BodySmall}" />
			</smtx:XamlDisplay>

			<!-- Caption Large -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_CaptionLarge"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Caption Large - Lorem ipsum dolor sit amet"
						   Style="{StaticResource CaptionLarge}" />
			</smtx:XamlDisplay>

			<!-- Caption Medium -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_CaptionMedium"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Caption Medium - Lorem ipsum dolor sit amet"
						   Style="{StaticResource CaptionMedium}" />
			</smtx:XamlDisplay>

			<!-- Caption Small -->
			<smtx:XamlDisplay UniqueKey="M3Material_TextBlockSamplePage_CaptionSmall"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<TextBlock Text="Caption Small - Lorem ipsum dolor sit amet"
						   Style="{StaticResource CaptionSmall}" />
			</smtx:XamlDisplay>

		</StackPanel>
	</ScrollViewer>
</Page>
