<Page x:Class="Uno.Themes.Samples.Content.Controls.ToggleButtonSamplePage"
	  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	  xmlns:smtx="using:ShowMeTheXAML"
	  xmlns:ut="using:Uno.Themes"
	  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<ScrollViewer>
		<StackPanel Padding="16"
					Spacing="8">

			<TextBlock Text="ToggleButton Styles"
					   Style="{StaticResource TitleLarge}"
					   Margin="0,0,0,16" />

			<!--  Icon ToggleButton Unchecked  -->
			<smtx:XamlDisplay UniqueKey="ToggleButtonSamplePage_IconUnchecked"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Icon Unchecked" />
					<ToggleButton Style="{StaticResource MaterialIconToggleButtonStyle}">
						<ToggleButton.Content>
							<FontIcon Glyph="&#xE160;" />
						</ToggleButton.Content>
						<ut:ControlExtensions.AlternateContent>
							<FontIcon Glyph="&#xE132;" />
						</ut:ControlExtensions.AlternateContent>
					</ToggleButton>
				</StackPanel>
			</smtx:XamlDisplay>

			<!--  Icon ToggleButton Checked  -->
			<smtx:XamlDisplay UniqueKey="ToggleButtonSamplePage_IconChecked"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Icon Checked" />
					<ToggleButton IsChecked="True"
								  Style="{StaticResource MaterialIconToggleButtonStyle}">
						<ToggleButton.Content>
							<FontIcon Glyph="&#xE160;" />
						</ToggleButton.Content>
						<ut:ControlExtensions.AlternateContent>
							<FontIcon Glyph="&#xE132;" />
						</ut:ControlExtensions.AlternateContent>
					</ToggleButton>
				</StackPanel>
			</smtx:XamlDisplay>

			<!--  Icon ToggleButton Unchecked Disabled  -->
			<smtx:XamlDisplay UniqueKey="ToggleButtonSamplePage_IconUncheckedDisabled"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Icon Unchecked Disabled" />
					<ToggleButton IsEnabled="False"
								  Style="{StaticResource MaterialIconToggleButtonStyle}">
						<ToggleButton.Content>
							<FontIcon Glyph="&#xE160;" />
						</ToggleButton.Content>
						<ut:ControlExtensions.AlternateContent>
							<FontIcon Glyph="&#xE132;" />
						</ut:ControlExtensions.AlternateContent>
					</ToggleButton>
				</StackPanel>
			</smtx:XamlDisplay>

			<!--  Icon ToggleButton Checked Disabled  -->
			<smtx:XamlDisplay UniqueKey="ToggleButtonSamplePage_IconCheckedDisabled"
							  Style="{StaticResource XamlDisplayBelowStyle}">
				<StackPanel>
					<TextBlock Text="Icon Checked Disabled" />
					<ToggleButton IsChecked="True"
								  IsEnabled="False"
								  Style="{StaticResource MaterialIconToggleButtonStyle}">
						<ToggleButton.Content>
							<FontIcon Glyph="&#xE160;" />
						</ToggleButton.Content>
						<ut:ControlExtensions.AlternateContent>
							<FontIcon Glyph="&#xE132;" />
						</ut:ControlExtensions.AlternateContent>
					</ToggleButton>
				</StackPanel>
			</smtx:XamlDisplay>

		</StackPanel>
	</ScrollViewer>
</Page>
