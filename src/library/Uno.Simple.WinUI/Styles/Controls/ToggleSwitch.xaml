<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- ToggleSwitch Resources -->
	<x:Double x:Key="SimpleToggleSwitchKnobWidth">52</x:Double>
	<x:Double x:Key="SimpleToggleSwitchKnobHeight">32</x:Double>
	<x:Double x:Key="SimpleToggleSwitchKnobRadius">16</x:Double>
	<x:Double x:Key="SimpleToggleSwitchKnobStrokeThickness">2</x:Double>

	<x:Double x:Key="SimpleToggleSwitchSmallThumbSize">16</x:Double>
	<x:Double x:Key="SimpleToggleSwitchMediumThumbSize">24</x:Double>
	<x:Double x:Key="SimpleToggleSwitchLargeThumbSize">28</x:Double>
	<CornerRadius x:Key="SimpleToggleSwitchLargeThumbCornerRadius">14</CornerRadius>

	<x:Double x:Key="SimpleToggleSwitchKnobIncludingOffShadowWidth">52</x:Double>
	<x:Double x:Key="SimpleToggleSwitchKnobShadowSize">40</x:Double>

	<Thickness x:Key="SimpleToggleSwitchKnobOnMargin">24,2,0,2</Thickness>
	<Thickness x:Key="SimpleToggleSwitchKnobOffMargin">2,4,0,4</Thickness>
	<Thickness x:Key="SimpleToggleSwitchKnobOnContentMargin">4,0,0,0</Thickness>

	<Thickness x:Key="SimpleToggleSwitchKnobOnShadowMargin">28,0,0,0</Thickness>
	<Thickness x:Key="SimpleToggleSwitchKnobOffShadowMargin">6,0,0,0</Thickness>

	<x:Double x:Key="SimpleToggleSwitchKnobIconSize">16</x:Double>
	<Thickness x:Key="SimpleToggleSwitchKnobIconPadding">2</Thickness>

	<!-- Simple ToggleSwitch Style -->
	<Style x:Key="SimpleToggleSwitchStyle"
		   TargetType="ToggleSwitch">
		<Setter Property="FontFamily" Value="{StaticResource SimpleFontFamily}" />
		<Setter Property="FontSize" Value="14" />
		<Setter Property="Foreground" Value="{StaticResource OnSurfaceBrush}" />
		<Setter Property="HorizontalAlignment" Value="Left" />
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="HorizontalContentAlignment" Value="Left" />
		<Setter Property="MinWidth" Value="52" />
		<Setter Property="UseSystemFocusVisuals" Value="True" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="ToggleSwitch">
					<Grid>
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<!-- Normal -->
								<VisualState x:Name="Normal" />

								<!-- PointerOver -->
								<VisualState x:Name="PointerOver">
									<Storyboard>
										<DoubleAnimation Storyboard.TargetName="SwitchKnobOnShadow"
														 Storyboard.TargetProperty="Opacity"
														 To="0.08"
														 Duration="0:0:0.167" />
										<DoubleAnimation Storyboard.TargetName="SwitchKnobOffShadow"
														 Storyboard.TargetProperty="Opacity"
														 To="0.08"
														 Duration="0:0:0.167" />
									</Storyboard>
								</VisualState>

								<!-- Pressed -->
								<VisualState x:Name="Pressed">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="KnobOn"
																	   Storyboard.TargetProperty="Margin">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="0" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="KnobOff"
																	   Storyboard.TargetProperty="Margin">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="0" />
										</ObjectAnimationUsingKeyFrames>
										<DoubleAnimationUsingKeyFrames Storyboard.TargetName="SwitchKnobOnShadow"
																	   Storyboard.TargetProperty="Opacity"
																	   EnableDependentAnimation="True">
											<LinearDoubleKeyFrame KeyTime="0:0:0.083"
																  Value="0.12" />
										</DoubleAnimationUsingKeyFrames>
										<DoubleAnimationUsingKeyFrames Storyboard.TargetName="SwitchKnobOffShadow"
																	   Storyboard.TargetProperty="Opacity"
																	   EnableDependentAnimation="True">
											<LinearDoubleKeyFrame KeyTime="0:0:0.083"
																  Value="0.12" />
										</DoubleAnimationUsingKeyFrames>
										<DoubleAnimationUsingKeyFrames Storyboard.TargetName="KnobOn"
																	   Storyboard.TargetProperty="Width"
																	   EnableDependentAnimation="True">
											<SplineDoubleKeyFrame KeyTime="{StaticResource SimpleToggleSwitchPressedAnimationDuration}"
																  Value="{StaticResource SimpleToggleSwitchLargeThumbSize}"
																  KeySpline="0.2,0,0,1" />
										</DoubleAnimationUsingKeyFrames>
										<DoubleAnimationUsingKeyFrames Storyboard.TargetName="KnobOn"
																	   Storyboard.TargetProperty="Height"
																	   EnableDependentAnimation="True">
											<SplineDoubleKeyFrame KeyTime="{StaticResource SimpleToggleSwitchPressedAnimationDuration}"
																  Value="{StaticResource SimpleToggleSwitchLargeThumbSize}"
																  KeySpline="0.2,0,0,1" />
										</DoubleAnimationUsingKeyFrames>
										<DoubleAnimationUsingKeyFrames Storyboard.TargetName="KnobOff"
																	   Storyboard.TargetProperty="Width"
																	   EnableDependentAnimation="True">
											<SplineDoubleKeyFrame KeyTime="{StaticResource SimpleToggleSwitchPressedAnimationDuration}"
																  Value="{StaticResource SimpleToggleSwitchLargeThumbSize}"
																  KeySpline="0.2,0,0,1" />
										</DoubleAnimationUsingKeyFrames>
										<DoubleAnimationUsingKeyFrames Storyboard.TargetName="KnobOff"
																	   Storyboard.TargetProperty="Height"
																	   EnableDependentAnimation="True">
											<SplineDoubleKeyFrame KeyTime="{StaticResource SimpleToggleSwitchPressedAnimationDuration}"
																  Value="{StaticResource SimpleToggleSwitchLargeThumbSize}"
																  KeySpline="0.2,0,0,1" />
										</DoubleAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>

								<!-- Disabled -->
								<VisualState x:Name="Disabled">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="OuterBorder"
																	   Storyboard.TargetProperty="Fill">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource DisabledBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="OuterBorder"
																	   Storyboard.TargetProperty="Stroke">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource DisabledBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="SwitchKnobBounds"
																	   Storyboard.TargetProperty="Fill">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource DisabledBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="KnobOn"
																	   Storyboard.TargetProperty="Fill">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource OnSurfaceMediumBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="KnobOff"
																	   Storyboard.TargetProperty="Fill">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource OnSurfaceMediumBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter"
																	   Storyboard.TargetProperty="Foreground">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource DisabledBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="HeaderContentPresenter"
																	   Storyboard.TargetProperty="Foreground">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource DisabledBrush}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
							</VisualStateGroup>

							<VisualStateGroup x:Name="ToggleStates">
								<!-- Dragging -->
								<VisualState x:Name="Dragging" />

								<!-- Off -->
								<VisualState x:Name="Off">
									<Storyboard>
										<DoubleAnimation Storyboard.TargetName="KnobOff"
														 Storyboard.TargetProperty="Opacity"
														 To="1.0"
														 Duration="0" />
										<DoubleAnimation Storyboard.TargetName="SwitchKnobBounds"
														 Storyboard.TargetProperty="Opacity"
														 To="0.0"
														 Duration="0" />
									</Storyboard>
								</VisualState>

								<!-- On -->
								<VisualState x:Name="On">
									<Storyboard>
										<DoubleAnimation Storyboard.TargetName="KnobOn"
														 Storyboard.TargetProperty="Opacity"
														 To="1.0"
														 Duration="0" />
										<DoubleAnimation Storyboard.TargetName="KnobOff"
														 Storyboard.TargetProperty="Opacity"
														 To="0.0"
														 Duration="0" />
										<DoubleAnimation Storyboard.TargetName="OuterBorder"
														 Storyboard.TargetProperty="Opacity"
														 To="0.0"
														 Duration="0" />
										<DoubleAnimation Storyboard.TargetName="SwitchKnobBounds"
														 Storyboard.TargetProperty="Opacity"
														 To="1.0"
														 Duration="0" />
										<DoubleAnimationUsingKeyFrames Storyboard.TargetName="SwitchKnobOnShadow"
																	   Storyboard.TargetProperty="Opacity">
											<LinearDoubleKeyFrame KeyTime="0:0:0.167"
																  Value="1" />
										</DoubleAnimationUsingKeyFrames>
										<DoubleAnimationUsingKeyFrames Storyboard.TargetName="SwitchKnobOffShadow"
																	   Storyboard.TargetProperty="Opacity">
											<LinearDoubleKeyFrame KeyTime="0:0:0.167"
																  Value="0" />
										</DoubleAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>

						<Grid.RowDefinitions>
							<RowDefinition Height="Auto" />
							<RowDefinition Height="*" />
						</Grid.RowDefinitions>

						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="12"
											  MaxWidth="12" />
							<ColumnDefinition Width="Auto" />
						</Grid.ColumnDefinitions>

						<!-- Header -->
						<ContentPresenter x:Name="HeaderContentPresenter"
										  Grid.Row="0"
										  Grid.Column="0"
										  Grid.ColumnSpan="3"
										  Content="{TemplateBinding Header}"
										  ContentTemplate="{TemplateBinding HeaderTemplate}"
										  Foreground="{StaticResource OnSurfaceBrush}"
										  Margin="0,0,0,4"
										  VerticalAlignment="Top"
										  Visibility="Collapsed" />

						<!-- ToggleSwitch Track and Knob -->
						<Grid Grid.Row="1"
							  Grid.Column="0"
							  HorizontalAlignment="Left"
							  VerticalAlignment="Top">

							<!-- Off Track -->
							<Rectangle x:Name="OuterBorder"
									   Width="{StaticResource SimpleToggleSwitchKnobWidth}"
									   Height="{StaticResource SimpleToggleSwitchKnobHeight}"
									   RadiusX="{StaticResource SimpleToggleSwitchKnobRadius}"
									   RadiusY="{StaticResource SimpleToggleSwitchKnobRadius}"
									   Fill="{StaticResource SurfaceBrush}"
									   Stroke="{StaticResource OnSurfaceLowBrush}"
									   StrokeThickness="{StaticResource SimpleToggleSwitchKnobStrokeThickness}"
									   HorizontalAlignment="Center" />

							<!-- On Track -->
							<Rectangle x:Name="SwitchKnobBounds"
									   Width="{StaticResource SimpleToggleSwitchKnobWidth}"
									   Height="{StaticResource SimpleToggleSwitchKnobHeight}"
									   RadiusX="{StaticResource SimpleToggleSwitchKnobRadius}"
									   RadiusY="{StaticResource SimpleToggleSwitchKnobRadius}"
									   Fill="{StaticResource PrimaryBrush}"
									   HorizontalAlignment="Center"
									   Opacity="0" />

							<Grid x:Name="SwitchKnob"
								  HorizontalAlignment="Left"
								  Width="{StaticResource SimpleToggleSwitchKnobIncludingOffShadowWidth}"
								  Height="{StaticResource SimpleToggleSwitchKnobHeight}">

								<!-- Switch Knob - On -->
								<Grid x:Name="SwitchKnobOn"
									  Width="{StaticResource SimpleToggleSwitchLargeThumbSize}"
									  Height="{StaticResource SimpleToggleSwitchLargeThumbSize}"
									  Margin="{StaticResource SimpleToggleSwitchKnobOnMargin}"
									  CornerRadius="{StaticResource SimpleToggleSwitchLargeThumbCornerRadius}"
									  HorizontalAlignment="Left">

									<!-- Knob On -->
									<Ellipse x:Name="KnobOn"
											 Opacity="0"
											 Width="{StaticResource SimpleToggleSwitchMediumThumbSize}"
											 Height="{StaticResource SimpleToggleSwitchMediumThumbSize}"
											 Margin="{StaticResource SimpleToggleSwitchKnobOnContentMargin}"
											 VerticalAlignment="Center"
											 HorizontalAlignment="Left"
											 Fill="{StaticResource SurfaceBrush}" />
								</Grid>

								<!-- Switch Knob - Off -->
								<Grid x:Name="SwitchKnobOff"
									  Width="{StaticResource SimpleToggleSwitchLargeThumbSize}"
									  Height="{StaticResource SimpleToggleSwitchLargeThumbSize}"
									  Margin="{StaticResource SimpleToggleSwitchKnobOffMargin}"
									  CornerRadius="{StaticResource SimpleToggleSwitchLargeThumbCornerRadius}"
									  HorizontalAlignment="Left">

									<!-- Knob Off -->
									<Ellipse x:Name="KnobOff"
											 Fill="{StaticResource OnSurfaceLowBrush}"
											 Height="{StaticResource SimpleToggleSwitchSmallThumbSize}"
											 Width="{StaticResource SimpleToggleSwitchSmallThumbSize}"
											 VerticalAlignment="Center"
											 HorizontalAlignment="Center" />
								</Grid>
							</Grid>

							<!-- On State Layer (Shadow) -->
							<Ellipse x:Name="SwitchKnobOnShadow"
									 Width="{StaticResource SimpleToggleSwitchKnobShadowSize}"
									 Height="{StaticResource SimpleToggleSwitchKnobShadowSize}"
									 Margin="{StaticResource SimpleToggleSwitchKnobOnShadowMargin}"
									 HorizontalAlignment="Center"
									 VerticalAlignment="Center"
									 Fill="{StaticResource PrimaryBrush}"
									 Opacity="0" />

							<!-- Off State Layer (Shadow) -->
							<Ellipse x:Name="SwitchKnobOffShadow"
									 Width="{StaticResource SimpleToggleSwitchKnobShadowSize}"
									 Height="{StaticResource SimpleToggleSwitchKnobShadowSize}"
									 Margin="{StaticResource SimpleToggleSwitchKnobOffShadowMargin}"
									 HorizontalAlignment="Center"
									 VerticalAlignment="Center"
									 Fill="{StaticResource OnSurfaceBrush}"
									 Opacity="0" />

							<!-- SwitchThumb for dragging -->
							<Thumb x:Name="SwitchThumb"
								   AutomationProperties.AccessibilityView="Raw">
								<Thumb.Template>
									<ControlTemplate TargetType="Thumb">
										<Rectangle Fill="Transparent" />
									</ControlTemplate>
								</Thumb.Template>
							</Thumb>
						</Grid>

						<!-- Content -->
						<ContentPresenter x:Name="ContentPresenter"
										  Grid.Row="1"
										  Grid.Column="2"
										  Foreground="{TemplateBinding Foreground}"
										  HorizontalAlignment="Left"
										  VerticalAlignment="Center"
										  AutomationProperties.AccessibilityView="Raw" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>
