<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<ResourceDictionary.ThemeDictionaries>
		<ResourceDictionary x:Key="Default">
			<CornerRadius x:Key="SimpleTextBoxCornerRadius">8</CornerRadius>
			<CornerRadius x:Key="SimpleInputTextBoxCornerRadius">8,8,0,0</CornerRadius>
			<Thickness x:Key="SimpleTextBoxBorderThickness">1</Thickness>
			<Thickness x:Key="SimpleTextBoxPadding">12</Thickness>
			<x:Double x:Key="SimpleTextBoxHeight">40</x:Double>
			<x:Double x:Key="SimpleTextBoxHeightSmall">32</x:Double>
			<x:Double x:Key="SimpleInputTextBoxIndicatorHeight">1</x:Double>
			<x:Double x:Key="SimpleInputTextBoxIndicatorHeightFocused">2</x:Double>
		</ResourceDictionary>
		<ResourceDictionary x:Key="Light">
			<CornerRadius x:Key="SimpleTextBoxCornerRadius">8</CornerRadius>
			<CornerRadius x:Key="SimpleInputTextBoxCornerRadius">8,8,0,0</CornerRadius>
			<Thickness x:Key="SimpleTextBoxBorderThickness">1</Thickness>
			<Thickness x:Key="SimpleTextBoxPadding">12</Thickness>
			<x:Double x:Key="SimpleTextBoxHeight">40</x:Double>
			<x:Double x:Key="SimpleTextBoxHeightSmall">32</x:Double>
			<x:Double x:Key="SimpleInputTextBoxIndicatorHeight">1</x:Double>
			<x:Double x:Key="SimpleInputTextBoxIndicatorHeightFocused">2</x:Double>
		</ResourceDictionary>

	</ResourceDictionary.ThemeDictionaries>
	<Style x:Key="SimpleInputTextBoxStyle"
		   TargetType="TextBox">
		<Setter Property="Background" Value="{ThemeResource SurfaceVariantBrush}" />
		<Setter Property="Foreground" Value="{ThemeResource OnSurfaceBrush}" />
		<Setter Property="BorderBrush" Value="{ThemeResource OutlineBrush}" />
		<Setter Property="BorderThickness" Value="0" />
		<Setter Property="CornerRadius" Value="{ThemeResource SimpleInputTextBoxCornerRadius}" />
		<Setter Property="Padding" Value="0" />
		<Setter Property="MinHeight" Value="{ThemeResource SimpleTextBoxHeight}" />
		<Setter Property="FontFamily" Value="{ThemeResource SimpleFontFamily}" />
		<Setter Property="FontSize" Value="16" />
		<Setter Property="FontWeight" Value="Normal" />
		<Setter Property="HorizontalAlignment" Value="Stretch" />
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="HorizontalContentAlignment" Value="Left" />
		<Setter Property="VerticalContentAlignment" Value="Top" />
		<Setter Property="UseSystemFocusVisuals" Value="True" />
		<Setter Property="FocusVisualMargin" Value="-3" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="TextBox">
					<Grid>
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualState x:Name="Normal" />

								<VisualState x:Name="PointerOver">
									<VisualState.Setters>
										<Setter Target="NormalIndicator.Fill" Value="{ThemeResource OnSurfaceBrush}" />
									</VisualState.Setters>
								</VisualState>

								<VisualState x:Name="Focused">
									<VisualState.Setters>
										<Setter Target="NormalIndicator.Fill" Value="{ThemeResource PrimaryBrush}" />
										<Setter Target="NormalIndicator.Height" Value="{ThemeResource SimpleInputTextBoxIndicatorHeightFocused}" />
									</VisualState.Setters>
								</VisualState>

								<VisualState x:Name="Disabled">
									<VisualState.Setters>
										<Setter Target="BackgroundElement.Background" Value="{ThemeResource DisabledBrush}" />
										<Setter Target="NormalIndicator.Fill" Value="{ThemeResource DisabledBrush}" />
										<Setter Target="ContentElement.Foreground" Value="{ThemeResource OnDisabledBrush}" />
									</VisualState.Setters>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>

						<Border x:Name="BackgroundElement"
								Background="{TemplateBinding Background}"
								CornerRadius="{TemplateBinding CornerRadius}"
								MinHeight="{TemplateBinding MinHeight}">

							<Border Padding="{ThemeResource SimpleTextBoxPadding}"
									VerticalAlignment="Top">
								<ScrollViewer x:Name="ContentElement"
											  HorizontalScrollMode="{TemplateBinding ScrollViewer.HorizontalScrollMode}"
											  HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
											  VerticalScrollMode="{TemplateBinding ScrollViewer.VerticalScrollMode}"
											  VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}"
											  VerticalAlignment="Top"
											  IsHorizontalRailEnabled="False"
											  IsVerticalRailEnabled="False"
											  IsTabStop="False"
											  ZoomMode="Disabled"
											  AutomationProperties.AccessibilityView="Raw" />
							</Border>
						</Border>

						<!-- Bottom indicator line -->
						<Rectangle x:Name="NormalIndicator"
								   Height="{ThemeResource SimpleInputTextBoxIndicatorHeight}"
								   Fill="{ThemeResource OutlineBrush}"
								   VerticalAlignment="Bottom"
								   HorizontalAlignment="Stretch" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<Style x:Key="SimpleOutlinedInputTextBoxStyle"
		   TargetType="TextBox">
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Foreground" Value="{ThemeResource OnSurfaceBrush}" />
		<Setter Property="BorderBrush" Value="{ThemeResource OutlineBrush}" />
		<Setter Property="BorderThickness" Value="{ThemeResource SimpleTextBoxBorderThickness}" />
		<Setter Property="CornerRadius" Value="{ThemeResource SimpleTextBoxCornerRadius}" />
		<Setter Property="Padding" Value="0" />
		<Setter Property="MinHeight" Value="{ThemeResource SimpleTextBoxHeight}" />
		<Setter Property="FontFamily" Value="{ThemeResource SimpleFontFamily}" />
		<Setter Property="FontSize" Value="16" />
		<Setter Property="FontWeight" Value="Normal" />
		<Setter Property="HorizontalAlignment" Value="Stretch" />
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="HorizontalContentAlignment" Value="Left" />
		<Setter Property="VerticalContentAlignment" Value="Top" />
		<Setter Property="UseSystemFocusVisuals" Value="True" />
		<Setter Property="FocusVisualMargin" Value="-3" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="TextBox">
					<Grid>
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<VisualState x:Name="Normal" />

								<VisualState x:Name="PointerOver">
									<VisualState.Setters>
										<Setter Target="BorderElement.BorderBrush" Value="{ThemeResource OutlineVariantBrush}" />
									</VisualState.Setters>
								</VisualState>

								<VisualState x:Name="Focused">
									<VisualState.Setters>
										<Setter Target="BorderElement.BorderBrush" Value="{ThemeResource PrimaryBrush}" />
										<Setter Target="BorderElement.BorderThickness" Value="2" />
									</VisualState.Setters>
								</VisualState>

								<VisualState x:Name="Disabled">
									<VisualState.Setters>
										<Setter Target="BorderElement.BorderBrush" Value="{ThemeResource DisabledBrush}" />
										<Setter Target="ContentElement.Foreground" Value="{ThemeResource OnDisabledBrush}" />
									</VisualState.Setters>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>

						<Border x:Name="BorderElement"
								Background="{TemplateBinding Background}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="{TemplateBinding CornerRadius}"
								MinHeight="{TemplateBinding MinHeight}">

							<Border Padding="{ThemeResource SimpleTextBoxPadding}"
									VerticalAlignment="Top">
								<ScrollViewer x:Name="ContentElement"
											  HorizontalScrollMode="{TemplateBinding ScrollViewer.HorizontalScrollMode}"
											  HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
											  VerticalScrollMode="{TemplateBinding ScrollViewer.VerticalScrollMode}"
											  VerticalScrollBarVisibility="{TemplateBinding ScrollViewer.VerticalScrollBarVisibility}"
											  VerticalAlignment="Top"
											  IsHorizontalRailEnabled="False"
											  IsVerticalRailEnabled="False"
											  IsTabStop="False"
											  ZoomMode="Disabled"
											  AutomationProperties.AccessibilityView="Raw" />
							</Border>
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Small Size Variant -->
	<Style x:Key="SimpleInputTextBoxSmallStyle"
		   TargetType="TextBox"
		   BasedOn="{StaticResource SimpleInputTextBoxStyle}">
		<Setter Property="MinHeight" Value="{ThemeResource SimpleTextBoxHeightSmall}" />
	</Style>

	<!-- Default TextBox Style -->
	<Style TargetType="TextBox"
		   BasedOn="{StaticResource SimpleInputTextBoxStyle}" />

</ResourceDictionary>
