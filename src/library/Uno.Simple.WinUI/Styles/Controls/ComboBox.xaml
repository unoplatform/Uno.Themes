<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- ComboBox Resources -->
	<CornerRadius x:Key="ComboBoxCornerRadius">8</CornerRadius>
	<x:Double x:Key="ComboBoxMinHeight">40</x:Double>
	<Thickness x:Key="ComboBoxBorderThickness">1</Thickness>
	<Thickness x:Key="ComboBoxPadding">16,12,12,12</Thickness>
	<Thickness x:Key="ComboBoxFocusedBorderThickness">2</Thickness>

	<!-- Dropdown arrow icon -->
	<x:String x:Key="ComboBoxDropDownGlyphIcon">&#xE96E;</x:String>

	<!-- Base Simple ComboBox Style -->
	<Style x:Key="SimpleComboBoxStyle"
		   TargetType="ComboBox">
		<Setter Property="FontFamily" Value="{StaticResource SimpleFontFamily}" />
		<Setter Property="FontSize" Value="14" />
		<Setter Property="Foreground" Value="{StaticResource OnSurfaceBrush}" />
		<Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
		<Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}" />
		<Setter Property="BorderThickness" Value="{StaticResource ComboBoxBorderThickness}" />
		<Setter Property="Padding" Value="{StaticResource ComboBoxPadding}" />
		<Setter Property="MinHeight" Value="{StaticResource ComboBoxMinHeight}" />
		<Setter Property="HorizontalAlignment" Value="Stretch" />
		<Setter Property="VerticalAlignment" Value="Top" />
		<Setter Property="HorizontalContentAlignment" Value="Left" />
		<Setter Property="VerticalContentAlignment" Value="Center" />
		<Setter Property="CornerRadius" Value="{StaticResource ComboBoxCornerRadius}" />
		<Setter Property="UseSystemFocusVisuals" Value="True" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="ComboBox">
					<Grid>
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<!-- Normal -->
								<VisualState x:Name="Normal" />

								<!-- PointerOver -->
								<VisualState x:Name="PointerOver">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="BorderElement"
																	   Storyboard.TargetProperty="BorderBrush">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource OnSurfaceBrush}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>

								<!-- Pressed -->
								<VisualState x:Name="Pressed">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="BorderElement"
																	   Storyboard.TargetProperty="BorderBrush">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource PrimaryBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="BorderElement"
																	   Storyboard.TargetProperty="BorderThickness">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource ComboBoxFocusedBorderThickness}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>

								<!-- Disabled -->
								<VisualState x:Name="Disabled">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="BorderElement"
																	   Storyboard.TargetProperty="Background">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource DisabledBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="BorderElement"
																	   Storyboard.TargetProperty="BorderBrush">
											<DiscreteObjectKeyFrame KeyTime="0">
												<DiscreteObjectKeyFrame.Value>
													<SolidColorBrush Color="#B2B2B2" />
												</DiscreteObjectKeyFrame.Value>
											</DiscreteObjectKeyFrame>
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter"
																	   Storyboard.TargetProperty="Foreground">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource OnDisabledBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="DropDownGlyph"
																	   Storyboard.TargetProperty="Foreground">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource OnDisabledBrush}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
							</VisualStateGroup>

							<VisualStateGroup x:Name="FocusStates">
								<!-- Unfocused -->
								<VisualState x:Name="Unfocused" />

								<!-- Focused -->
								<VisualState x:Name="Focused">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="BorderElement"
																	   Storyboard.TargetProperty="BorderBrush">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource PrimaryBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="BorderElement"
																	   Storyboard.TargetProperty="BorderThickness">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource ComboBoxFocusedBorderThickness}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>

								<!-- FocusedPressed -->
								<VisualState x:Name="FocusedPressed">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="BorderElement"
																	   Storyboard.TargetProperty="BorderBrush">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource PrimaryBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="BorderElement"
																	   Storyboard.TargetProperty="BorderThickness">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource ComboBoxFocusedBorderThickness}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
							</VisualStateGroup>

							<VisualStateGroup x:Name="DropDownStates">
								<!-- Closed -->
								<VisualState x:Name="Closed" />

								<!-- Opened -->
								<VisualState x:Name="Opened">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="BorderElement"
																	   Storyboard.TargetProperty="BorderBrush">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource PrimaryBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="BorderElement"
																	   Storyboard.TargetProperty="BorderThickness">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource ComboBoxFocusedBorderThickness}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>

						<Border x:Name="BorderElement"
								Background="{TemplateBinding Background}"
								BorderBrush="{TemplateBinding BorderBrush}"
								BorderThickness="{TemplateBinding BorderThickness}"
								CornerRadius="{TemplateBinding CornerRadius}"
								MinHeight="{TemplateBinding MinHeight}">
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*" />
									<ColumnDefinition Width="Auto" />
								</Grid.ColumnDefinitions>

								<!-- Content -->
								<ContentPresenter x:Name="ContentPresenter"
												  Grid.Column="0"
												  Content="{TemplateBinding SelectionBoxItem}"
												  ContentTemplate="{TemplateBinding ItemTemplate}"
												  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
												  Foreground="{TemplateBinding Foreground}"
												  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
												  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
												  Margin="{TemplateBinding Padding}" />

								<!-- Dropdown Arrow -->
								<FontIcon x:Name="DropDownGlyph"
										  Grid.Column="1"
										  Glyph="{StaticResource ComboBoxDropDownGlyphIcon}"
										  FontFamily="{ThemeResource SymbolThemeFontFamily}"
										  FontSize="12"
										  Foreground="{StaticResource OnSurfaceMediumBrush}"
										  VerticalAlignment="Center"
										  Margin="8,0,12,0"
										  IsHitTestVisible="False"
										  AutomationProperties.AccessibilityView="Raw" />
							</Grid>
						</Border>

						<!-- Popup -->
						<Popup x:Name="Popup"
							   IsLightDismissEnabled="True"
							   AllowFocusOnInteraction="True">
							<Border x:Name="PopupBorder"
									Background="{StaticResource SurfaceBrush}"
									BorderBrush="{StaticResource OutlineBrush}"
									BorderThickness="1"
									CornerRadius="{StaticResource ComboBoxCornerRadius}"
									Padding="0,4"
									MaxHeight="400">
								<Border.Shadow>
									<ThemeShadow />
								</Border.Shadow>
								<ScrollViewer x:Name="ScrollViewer"
											  HorizontalScrollMode="Disabled"
											  HorizontalScrollBarVisibility="Disabled"
											  VerticalScrollMode="Auto"
											  VerticalScrollBarVisibility="Auto"
											  ZoomMode="Disabled">
									<ItemsPresenter />
								</ScrollViewer>
							</Border>
						</Popup>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Simple ComboBoxItem Style -->
	<Style x:Key="SimpleComboBoxItemStyle"
		   TargetType="ComboBoxItem">
		<Setter Property="FontFamily" Value="{StaticResource SimpleFontFamily}" />
		<Setter Property="FontSize" Value="14" />
		<Setter Property="Foreground" Value="{StaticResource OnSurfaceBrush}" />
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Padding" Value="16,12" />
		<Setter Property="MinHeight" Value="40" />
		<Setter Property="HorizontalContentAlignment" Value="Left" />
		<Setter Property="VerticalContentAlignment" Value="Center" />
		<Setter Property="UseSystemFocusVisuals" Value="True" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="ComboBoxItem">
					<Grid x:Name="LayoutRoot"
						  Background="{TemplateBinding Background}"
						  Padding="{TemplateBinding Padding}"
						  MinHeight="{TemplateBinding MinHeight}">
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<!-- Normal -->
								<VisualState x:Name="Normal" />

								<!-- PointerOver -->
								<VisualState x:Name="PointerOver">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="LayoutRoot"
																	   Storyboard.TargetProperty="Background">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource SurfaceVariantBrush}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>

								<!-- Pressed -->
								<VisualState x:Name="Pressed">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="LayoutRoot"
																	   Storyboard.TargetProperty="Background">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource SurfaceVariantBrush}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>

								<!-- Selected -->
								<VisualState x:Name="Selected">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="LayoutRoot"
																	   Storyboard.TargetProperty="Background">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource PrimaryBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter"
																	   Storyboard.TargetProperty="Foreground">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource OnPrimaryBrush}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>

								<!-- SelectedPointerOver -->
								<VisualState x:Name="SelectedPointerOver">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="LayoutRoot"
																	   Storyboard.TargetProperty="Background">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource PrimaryBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter"
																	   Storyboard.TargetProperty="Foreground">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource OnPrimaryBrush}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>

								<!-- SelectedPressed -->
								<VisualState x:Name="SelectedPressed">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="LayoutRoot"
																	   Storyboard.TargetProperty="Background">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource PrimaryBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter"
																	   Storyboard.TargetProperty="Foreground">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource OnPrimaryBrush}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>

								<!-- Disabled -->
								<VisualState x:Name="Disabled">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter"
																	   Storyboard.TargetProperty="Foreground">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource DisabledBrush}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>

						<ContentPresenter x:Name="ContentPresenter"
										  Content="{TemplateBinding Content}"
										  ContentTemplate="{TemplateBinding ContentTemplate}"
										  ContentTransitions="{TemplateBinding ContentTransitions}"
										  Foreground="{TemplateBinding Foreground}"
										  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
										  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	<!-- Error ComboBox Style -->
	<Style x:Key="SimpleErrorComboBoxStyle"
		   TargetType="ComboBox"
		   BasedOn="{StaticResource SimpleComboBoxStyle}">
		<Setter Property="BorderBrush" Value="{StaticResource ErrorBrush}" />
	</Style>

</ResourceDictionary>
