<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Card Resources -->
  <x:Double x:Key="SimpleCardMinWidth">240</x:Double>
  <x:Double x:Key="SimpleCardMaxWidth">440</x:Double>
  <Thickness x:Key="SimpleCardPadding">24</Thickness>
  <CornerRadius x:Key="SimpleCardCornerRadius">8</CornerRadius>
  <Thickness x:Key="SimpleCardBorderThickness">1</Thickness>

  <!-- Card Image Resources -->
  <x:Double x:Key="SimpleCardImageSize">160</x:Double>

  <!-- Card Icon Resources -->
  <x:Double x:Key="SimpleCardIconSize">32</x:Double>
  <CornerRadius x:Key="SimpleCardIconCornerRadius">8</CornerRadius>

  <!-- Card Content Spacing -->
  <x:Double x:Key="SimpleCardContentSpacing">16</x:Double>
  <x:Double x:Key="SimpleCardTextAreaSpacing">8</x:Double>

  <!-- Simple Card Border Base Style (can be used as container) -->
  <Style x:Key="SimpleCardBorderStyle" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource SurfaceBrush}" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="CornerRadius" Value="{StaticResource SimpleCardCornerRadius}" />
    <Setter Property="MinWidth" Value="{StaticResource SimpleCardMinWidth}" />
    <Setter Property="MaxWidth" Value="{StaticResource SimpleCardMaxWidth}" />
    <Setter Property="Padding" Value="{StaticResource SimpleCardPadding}" />
    <Setter Property="HorizontalAlignment" Value="Stretch" />
  </Style>

  <!-- Card with Border (Outlined Variant) -->
  <Style x:Key="SimpleOutlinedCardBorderStyle" 
         TargetType="Border" 
         BasedOn="{StaticResource SimpleCardBorderStyle}">
    <Setter Property="BorderBrush" Value="{StaticResource OutlineBrush}" />
    <Setter Property="BorderThickness" Value="{StaticResource SimpleCardBorderThickness}" />
  </Style>

  <!-- Card with Subtle Border (Stroke Variant) -->
  <Style x:Key="SimpleStrokeCardBorderStyle" 
         TargetType="Border" 
         BasedOn="{StaticResource SimpleCardBorderStyle}">
    <Setter Property="BorderBrush" Value="{StaticResource OutlineVariantBrush}" />
    <Setter Property="BorderThickness" Value="{StaticResource SimpleCardBorderThickness}" />
  </Style>

  <!-- Card without Padding (Filled Variant - for edge-to-edge content) -->
  <Style x:Key="SimpleFilledCardBorderStyle" 
         TargetType="Border" 
         BasedOn="{StaticResource SimpleCardBorderStyle}">
    <Setter Property="Padding" Value="0" />
  </Style>

  <!-- Card with Elevated Effect (uses ThemeShadow) -->
  <Style x:Key="SimpleElevatedCardBorderStyle" 
         TargetType="Border" 
         BasedOn="{StaticResource SimpleCardBorderStyle}">
    <Setter Property="Translation" Value="0,0,8" />
    <Setter Property="Shadow">
      <Setter.Value>
        <ThemeShadow />
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Helper Styles for Card Content -->

  <!-- Card Image Container Style -->
  <Style x:Key="SimpleCardImageBorderStyle" TargetType="Border">
    <Setter Property="Background" Value="{StaticResource SurfaceVariantBrush}" />
    <Setter Property="Width" Value="{StaticResource SimpleCardImageSize}" />
    <Setter Property="Height" Value="{StaticResource SimpleCardImageSize}" />
    <Setter Property="CornerRadius" Value="{StaticResource SimpleCardCornerRadius}" />
    <Setter Property="HorizontalAlignment" Value="Center" />
    <Setter Property="VerticalAlignment" Value="Center" />
  </Style>

  <!-- Card Icon Container Style -->
  <Style x:Key="SimpleCardIconBorderStyle" TargetType="Border">
    <Setter Property="Width" Value="{StaticResource SimpleCardIconSize}" />
    <Setter Property="Height" Value="{StaticResource SimpleCardIconSize}" />
    <Setter Property="CornerRadius" Value="{StaticResource SimpleCardIconCornerRadius}" />
    <Setter Property="HorizontalAlignment" Value="Left" />
    <Setter Property="VerticalAlignment" Value="Top" />
  </Style>

  <!-- Card Content StackPanel Style -->
  <Style x:Key="SimpleCardContentStackPanelStyle" TargetType="StackPanel">
    <Setter Property="Orientation" Value="Vertical" />
    <Setter Property="Spacing" Value="{StaticResource SimpleCardContentSpacing}" />
    <Setter Property="HorizontalAlignment" Value="Stretch" />
  </Style>

  <!-- Card Text Area StackPanel Style -->
  <Style x:Key="SimpleCardTextAreaStackPanelStyle" TargetType="StackPanel">
    <Setter Property="Orientation" Value="Vertical" />
    <Setter Property="Spacing" Value="{StaticResource SimpleCardTextAreaSpacing}" />
    <Setter Property="HorizontalAlignment" Value="Stretch" />
  </Style>

  <!-- Card Heading TextBlock Style -->
  <Style x:Key="SimpleCardHeadingTextBlockStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource SimpleFontFamily}" />
    <Setter Property="FontSize" Value="16" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Foreground" Value="{StaticResource OnSurfaceBrush}" />
    <Setter Property="TextWrapping" Value="Wrap" />
    <Setter Property="TextTrimming" Value="CharacterEllipsis" />
  </Style>

  <!-- Card Subheading TextBlock Style -->
  <Style x:Key="SimpleCardSubheadingTextBlockStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource SimpleFontFamily}" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="Foreground" Value="{StaticResource OnSurfaceMediumBrush}" />
    <Setter Property="TextWrapping" Value="Wrap" />
    <Setter Property="TextTrimming" Value="CharacterEllipsis" />
  </Style>

  <!-- Card Body TextBlock Style -->
  <Style x:Key="SimpleCardBodyTextBlockStyle" TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource SimpleFontFamily}" />
    <Setter Property="FontSize" Value="14" />
    <Setter Property="FontWeight" Value="Normal" />
    <Setter Property="Foreground" Value="{StaticResource OnSurfaceMediumBrush}" />
    <Setter Property="TextWrapping" Value="Wrap" />
    <Setter Property="LineHeight" Value="20" />
  </Style>

</ResourceDictionary>
