<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- RadioButton Resources -->
	<x:Double x:Key="SimpleRadioButtonSize">20</x:Double>
	<x:Double x:Key="SimpleRadioButtonMinHeight">40</x:Double>
	<x:Double x:Key="SimpleRadioButtonMinWidth">40</x:Double>
	<x:Double x:Key="SimpleRadioButtonStrokeThickness">2</x:Double>
	<x:Double x:Key="SimpleRadioButtonCheckSize">10</x:Double>
	<Thickness x:Key="SimpleRadioButtonContentMargin">8,0,0,0</Thickness>

	<!-- Simple RadioButton Style -->
	<Style x:Key="SimpleRadioButtonStyle"
		   TargetType="RadioButton">
		<Setter Property="FontFamily" Value="{StaticResource SimpleFontFamily}" />
		<Setter Property="FontSize" Value="14" />
		<Setter Property="Foreground" Value="{StaticResource OnSurfaceBrush}" />
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Padding" Value="0" />
		<Setter Property="HorizontalAlignment" Value="Left" />
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="HorizontalContentAlignment" Value="Left" />
		<Setter Property="VerticalContentAlignment" Value="Top" />
		<Setter Property="MinWidth" Value="{StaticResource SimpleRadioButtonMinWidth}" />
		<Setter Property="MinHeight" Value="{StaticResource SimpleRadioButtonMinHeight}" />
		<Setter Property="UseSystemFocusVisuals" Value="True" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="RadioButton">
					<Grid x:Name="RootGrid"
						  Background="{TemplateBinding Background}">
						<VisualStateManager.VisualStateGroups>
							<VisualStateGroup x:Name="CommonStates">
								<!-- Normal -->
								<VisualState x:Name="Normal" />

								<!-- PointerOver -->
								<VisualState x:Name="PointerOver">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="OuterEllipse"
																	   Storyboard.TargetProperty="Stroke">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource OnSurfaceBrush}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>

								<!-- Pressed -->
								<VisualState x:Name="Pressed">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="OuterEllipse"
																	   Storyboard.TargetProperty="Stroke">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource OnSurfaceBrush}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>

								<!-- Disabled -->
								<VisualState x:Name="Disabled">
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="OuterEllipse"
																	   Storyboard.TargetProperty="Stroke">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource DisabledBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="OuterEllipse"
																	   Storyboard.TargetProperty="Fill">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource DisabledBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="CheckEllipse"
																	   Storyboard.TargetProperty="Fill">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource OnDisabledBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="ContentPresenter"
																	   Storyboard.TargetProperty="Foreground">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource DisabledBrush}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>
							</VisualStateGroup>

							<VisualStateGroup x:Name="CheckStates">
								<!-- Unchecked -->
								<VisualState x:Name="Unchecked">
									<Storyboard>
										<DoubleAnimation Storyboard.TargetName="CheckEllipse"
														 Storyboard.TargetProperty="Opacity"
														 To="0"
														 Duration="0" />
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="OuterEllipse"
																	   Storyboard.TargetProperty="Fill">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource SurfaceBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="OuterEllipse"
																	   Storyboard.TargetProperty="Stroke">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource OnSurfaceMediumBrush}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>

								<!-- Checked -->
								<VisualState x:Name="Checked">
									<Storyboard>
										<DoubleAnimation Storyboard.TargetName="CheckEllipse"
														 Storyboard.TargetProperty="Opacity"
														 To="1"
														 Duration="0" />
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="OuterEllipse"
																	   Storyboard.TargetProperty="Fill">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource SurfaceVariantBrush}" />
										</ObjectAnimationUsingKeyFrames>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="OuterEllipse"
																	   Storyboard.TargetProperty="Stroke">
											<DiscreteObjectKeyFrame KeyTime="0"
																	Value="{StaticResource PrimaryBrush}" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</VisualState>

								<!-- Indeterminate -->
								<VisualState x:Name="Indeterminate" />
							</VisualStateGroup>
						</VisualStateManager.VisualStateGroups>

						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="*" />
						</Grid.ColumnDefinitions>

						<!-- Radio Button Circle -->
						<Grid Grid.Column="0"
							  Width="{StaticResource SimpleRadioButtonMinWidth}"
							  Height="{StaticResource SimpleRadioButtonMinHeight}"
							  VerticalAlignment="Top">

							<!-- Outer Circle -->
							<Ellipse x:Name="OuterEllipse"
									 Width="{StaticResource SimpleRadioButtonSize}"
									 Height="{StaticResource SimpleRadioButtonSize}"
									 Fill="{StaticResource SurfaceBrush}"
									 Stroke="{StaticResource OnSurfaceMediumBrush}"
									 StrokeThickness="{StaticResource SimpleRadioButtonStrokeThickness}"
									 HorizontalAlignment="Center"
									 VerticalAlignment="Center" />

							<!-- Inner Circle (Check) -->
							<Ellipse x:Name="CheckEllipse"
									 Width="{StaticResource SimpleRadioButtonCheckSize}"
									 Height="{StaticResource SimpleRadioButtonCheckSize}"
									 Fill="{StaticResource PrimaryBrush}"
									 Opacity="0"
									 HorizontalAlignment="Center"
									 VerticalAlignment="Center" />
						</Grid>

						<!-- Content -->
						<ContentPresenter x:Name="ContentPresenter"
										  Grid.Column="1"
										  Content="{TemplateBinding Content}"
										  ContentTemplate="{TemplateBinding ContentTemplate}"
										  ContentTransitions="{TemplateBinding ContentTransitions}"
										  Foreground="{TemplateBinding Foreground}"
										  Margin="{StaticResource SimpleRadioButtonContentMargin}"
										  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
										  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
										  AutomationProperties.AccessibilityView="Raw" />
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

</ResourceDictionary>
