<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!--
		Color Palette for Simple Design System
		Overrides the default SharedColorPalette values from Uno.Themes.
		Must be inside ThemeDictionaries so resources are overridable via lightweight styling.
	-->

	<ResourceDictionary.ThemeDictionaries>
		<ResourceDictionary x:Key="Default">
			<!-- Primary/Brand Colors -->
			<Color x:Key="PrimaryColor">#2c2c2c</Color>
			<Color x:Key="PrimaryVariantDarkColor">#1e1e1e</Color>
			<Color x:Key="PrimaryVariantLightColor">#f5f5f5</Color>

			<!-- On Primary -->
			<Color x:Key="OnPrimaryColor">#f5f5f5</Color>

			<!-- Surface -->
			<Color x:Key="SurfaceColor">#ffffff</Color>
			<Color x:Key="SurfaceVariantColor">#f5f5f5</Color>

			<!-- Background -->
			<Color x:Key="BackgroundColor">#f5f5f5</Color>
			<Color x:Key="BackgroundTertiaryColor">#e3e3e3</Color>

			<!-- On Surface -->
			<Color x:Key="OnSurfaceColor">#1e1e1e</Color>

			<!-- On Background -->
			<Color x:Key="OnBackgroundColor">#1e1e1e</Color>

			<!-- Outline -->
			<Color x:Key="OutlineColor">#d9d9d9</Color>
			<Color x:Key="OutlineVariantColor">#767676</Color>

			<!-- Error -->
			<Color x:Key="ErrorColor">#900b09</Color>
			<Color x:Key="OnErrorColor">#ffffff</Color>

			<!-- Disabled -->
			<Color x:Key="DisabledColor">#d9d9d9</Color>
			<Color x:Key="OnDisabledColor">#b3b3b3</Color>

			<!-- SDS Danger Colors -->
			<Color x:Key="SDSDangerPrimaryColor">#900b09</Color>
			<Color x:Key="SDSDangerPrimaryHoverColor">#7a0906</Color>
			<Color x:Key="SDSDangerSubtleTextColor">#900b09</Color>
			<Color x:Key="SDSDangerSubtleHoverBackgroundColor">#ffe6e5</Color>

			<!-- SDS Neutral Colors -->
			<Color x:Key="SDSNeutralTertiaryHoverColor">#cdcdcd</Color>
			<Color x:Key="SDSNeutralTertiaryDarkerColor">#d5d5d5</Color>
			<Color x:Key="SDSTextNeutralColor">#303030</Color>

			<!-- Simple-specific Brushes (not in SharedColors.xaml) -->
			<SolidColorBrush x:Key="BackgroundTertiaryBrush"
							 Color="{StaticResource BackgroundTertiaryColor}" />
			<SolidColorBrush x:Key="DisabledBrush"
							 Color="{StaticResource DisabledColor}" />
			<SolidColorBrush x:Key="OnDisabledBrush"
							 Color="{StaticResource OnDisabledColor}" />
			<SolidColorBrush x:Key="TransparentBrush"
							 Color="Transparent" />

			<!-- SDS Brushes -->
			<SolidColorBrush x:Key="SDSDangerPrimaryBrush"
							 Color="{StaticResource SDSDangerPrimaryColor}" />
			<SolidColorBrush x:Key="SDSDangerPrimaryHoverBrush"
							 Color="{StaticResource SDSDangerPrimaryHoverColor}" />
			<SolidColorBrush x:Key="SDSDangerSubtleTextBrush"
							 Color="{StaticResource SDSDangerSubtleTextColor}" />
			<SolidColorBrush x:Key="SDSDangerSubtleHoverBackgroundBrush"
							 Color="{StaticResource SDSDangerSubtleHoverBackgroundColor}" />
			<SolidColorBrush x:Key="SDSNeutralTertiaryHoverBrush"
							 Color="{StaticResource SDSNeutralTertiaryHoverColor}" />
			<SolidColorBrush x:Key="SDSNeutralTertiaryDarkerBrush"
							 Color="{StaticResource SDSNeutralTertiaryDarkerColor}" />
			<SolidColorBrush x:Key="SDSTextNeutralBrush"
							 Color="{StaticResource SDSTextNeutralColor}" />
		</ResourceDictionary>

		<ResourceDictionary x:Key="Light">
			<!-- Primary/Brand Colors -->
			<Color x:Key="PrimaryColor">#2c2c2c</Color>
			<Color x:Key="PrimaryVariantDarkColor">#1e1e1e</Color>
			<Color x:Key="PrimaryVariantLightColor">#f5f5f5</Color>

			<!-- On Primary -->
			<Color x:Key="OnPrimaryColor">#f5f5f5</Color>

			<!-- Surface -->
			<Color x:Key="SurfaceColor">#ffffff</Color>
			<Color x:Key="SurfaceVariantColor">#f5f5f5</Color>

			<!-- Background -->
			<Color x:Key="BackgroundColor">#f5f5f5</Color>
			<Color x:Key="BackgroundTertiaryColor">#e3e3e3</Color>

			<!-- On Surface -->
			<Color x:Key="OnSurfaceColor">#1e1e1e</Color>

			<!-- On Background -->
			<Color x:Key="OnBackgroundColor">#1e1e1e</Color>

			<!-- Outline -->
			<Color x:Key="OutlineColor">#d9d9d9</Color>
			<Color x:Key="OutlineVariantColor">#767676</Color>

			<!-- Error -->
			<Color x:Key="ErrorColor">#900b09</Color>
			<Color x:Key="OnErrorColor">#ffffff</Color>

			<!-- Disabled -->
			<Color x:Key="DisabledColor">#d9d9d9</Color>
			<Color x:Key="OnDisabledColor">#b3b3b3</Color>

			<!-- SDS Danger Colors -->
			<Color x:Key="SDSDangerPrimaryColor">#900b09</Color>
			<Color x:Key="SDSDangerPrimaryHoverColor">#7a0906</Color>
			<Color x:Key="SDSDangerSubtleTextColor">#900b09</Color>
			<Color x:Key="SDSDangerSubtleHoverBackgroundColor">#ffe6e5</Color>

			<!-- SDS Neutral Colors -->
			<Color x:Key="SDSNeutralTertiaryHoverColor">#cdcdcd</Color>
			<Color x:Key="SDSNeutralTertiaryDarkerColor">#d5d5d5</Color>
			<Color x:Key="SDSTextNeutralColor">#303030</Color>

			<!-- Simple-specific Brushes (not in SharedColors.xaml) -->
			<SolidColorBrush x:Key="BackgroundTertiaryBrush"
							 Color="{StaticResource BackgroundTertiaryColor}" />
			<SolidColorBrush x:Key="DisabledBrush"
							 Color="{StaticResource DisabledColor}" />
			<SolidColorBrush x:Key="OnDisabledBrush"
							 Color="{StaticResource OnDisabledColor}" />
			<SolidColorBrush x:Key="TransparentBrush"
							 Color="Transparent" />

			<!-- SDS Brushes -->
			<SolidColorBrush x:Key="SDSDangerPrimaryBrush"
							 Color="{StaticResource SDSDangerPrimaryColor}" />
			<SolidColorBrush x:Key="SDSDangerPrimaryHoverBrush"
							 Color="{StaticResource SDSDangerPrimaryHoverColor}" />
			<SolidColorBrush x:Key="SDSDangerSubtleTextBrush"
							 Color="{StaticResource SDSDangerSubtleTextColor}" />
			<SolidColorBrush x:Key="SDSDangerSubtleHoverBackgroundBrush"
							 Color="{StaticResource SDSDangerSubtleHoverBackgroundColor}" />
			<SolidColorBrush x:Key="SDSNeutralTertiaryHoverBrush"
							 Color="{StaticResource SDSNeutralTertiaryHoverColor}" />
			<SolidColorBrush x:Key="SDSNeutralTertiaryDarkerBrush"
							 Color="{StaticResource SDSNeutralTertiaryDarkerColor}" />
			<SolidColorBrush x:Key="SDSTextNeutralBrush"
							 Color="{StaticResource SDSTextNeutralColor}" />
		</ResourceDictionary>
	</ResourceDictionary.ThemeDictionaries>

</ResourceDictionary>
