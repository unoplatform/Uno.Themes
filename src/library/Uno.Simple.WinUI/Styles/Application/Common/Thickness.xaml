<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!-- Corner Radius -->
	<CornerRadius x:Key="SimpleButtonCornerRadius">8</CornerRadius>
	<CornerRadius x:Key="SimpleTextBoxCornerRadius">8</CornerRadius>
	<CornerRadius x:Key="SimpleCheckBoxCornerRadius">4</CornerRadius>

	<!-- Border Thickness -->
	<Thickness x:Key="BorderThickness">1</Thickness>
	<Thickness x:Key="SimpleButtonBorderThickness">1</Thickness>
	<Thickness x:Key="SimpleTextBoxBorderThickness">1</Thickness>

	<!-- Padding - Buttons -->
	<Thickness x:Key="SimpleButtonPadding">12,12,12,12</Thickness>
	<Thickness x:Key="SimpleButtonPaddingSmall">8,8,8,8</Thickness>
	<Thickness x:Key="SimpleButtonPaddingLarge">20,16,20,16</Thickness>

	<!-- Padding - TextBox/Input -->
	<Thickness x:Key="SimpleTextBoxPadding">12,12,12,12</Thickness>

	<!-- Control Heights -->
	<x:Double x:Key="SimpleButtonHeight">40</x:Double>
	<x:Double x:Key="SimpleButtonHeightSmall">32</x:Double>
	<x:Double x:Key="SimpleButtonHeightLarge">48</x:Double>
	<x:Double x:Key="SimpleTextBoxHeight">40</x:Double>
	<x:Double x:Key="SimpleTextBoxHeightSmall">32</x:Double>

</ResourceDictionary>
