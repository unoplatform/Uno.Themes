<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
    SDS Thickness/Size Resources using Material-compatible naming
    Based on SDS spacing scale and design tokens
    -->

    <!-- Corner Radius -->
    <CornerRadius x:Key="ButtonCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="TextBoxCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="CheckBoxCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="RadioButtonCornerRadius">9999</CornerRadius>
    <CornerRadius x:Key="CardCornerRadius">8</CornerRadius>
    <CornerRadius x:Key="ChipCornerRadius">9999</CornerRadius>

    <!-- Aliased CornerRadius -->
    <CornerRadius x:Key="Radius050">2</CornerRadius>
    <CornerRadius x:Key="Radius100">4</CornerRadius>
    <CornerRadius x:Key="Radius200">8</CornerRadius>
    <CornerRadius x:Key="Radius300">12</CornerRadius>
    <CornerRadius x:Key="Radius400">16</CornerRadius>
    <CornerRadius x:Key="RadiusFull">9999</CornerRadius>

    <!-- Border Thickness -->
    <Thickness x:Key="BorderThickness">1</Thickness>
    <Thickness x:Key="ButtonBorderThickness">1</Thickness>
    <Thickness x:Key="TextBoxBorderThickness">1</Thickness>
    
    <!-- Padding - Buttons -->
    <Thickness x:Key="ButtonPadding">12,12,12,12</Thickness>
    <Thickness x:Key="ButtonPaddingSmall">8,8,8,8</Thickness>
    <Thickness x:Key="ButtonPaddingLarge">20,16,20,16</Thickness>
    
    <!-- Padding - TextBox/Input -->
    <Thickness x:Key="TextBoxPadding">12,12,12,12</Thickness>
    <Thickness x:Key="TextBoxPaddingSmall">8,8,8,8</Thickness>
    
    <!-- Padding - CheckBox/Radio -->
    <Thickness x:Key="CheckBoxPadding">8,0,0,0</Thickness>
    <Thickness x:Key="RadioButtonPadding">8,0,0,0</Thickness>
    
    <!-- Padding - Cards -->
    <Thickness x:Key="CardPadding">16</Thickness>
    <Thickness x:Key="CardPaddingLarge">24</Thickness>
    
    <!-- Spacing Values (from SDS scale) -->
    <x:Double x:Key="SDSSpace050">2</x:Double>
    <x:Double x:Key="SDSSpace100">4</x:Double>
    <x:Double x:Key="SDSSpace200">8</x:Double>
    <x:Double x:Key="SDSSpace300">12</x:Double>
    <x:Double x:Key="SDSSpace400">16</x:Double>
    <x:Double x:Key="SDSSpace600">24</x:Double>
    <x:Double x:Key="SDSSpace800">32</x:Double>
    <x:Double x:Key="SDSSpace1200">48</x:Double>
    <x:Double x:Key="SDSSpace1600">64</x:Double>
    <x:Double x:Key="SDSSpace2000">100</x:Double>
    <x:Double x:Key="SDSSpace2400">140</x:Double>
    <x:Double x:Key="SDSSpace6000">300</x:Double>

    <!-- Aliased spacing names for AutoLayout -->
    <x:Double x:Key="Space050">2</x:Double>
    <x:Double x:Key="Space100">4</x:Double>
    <x:Double x:Key="Space200">8</x:Double>
    <x:Double x:Key="Space300">12</x:Double>
    <x:Double x:Key="Space400">16</x:Double>
    <x:Double x:Key="Space600">24</x:Double>
    <x:Double x:Key="Space800">32</x:Double>
    <x:Double x:Key="Space1200">48</x:Double>
    <x:Double x:Key="Space1600">64</x:Double>
    <x:Double x:Key="Space2000">100</x:Double>
    <x:Double x:Key="Space2400">140</x:Double>
    <x:Double x:Key="Space6000">300</x:Double>

    <!-- Thickness versions for Padding/Margin -->
    <Thickness x:Key="Spacing050">2</Thickness>
    <Thickness x:Key="Spacing100">4</Thickness>
    <Thickness x:Key="Spacing200">8</Thickness>
    <Thickness x:Key="Spacing300">12</Thickness>
    <Thickness x:Key="Spacing400">16</Thickness>
    <Thickness x:Key="Spacing600">24</Thickness>
    <Thickness x:Key="Spacing800">32</Thickness>
    <Thickness x:Key="Spacing1200">48</Thickness>
    <Thickness x:Key="Spacing1600">64</Thickness>
    <Thickness x:Key="Spacing2000">100</Thickness>
    <Thickness x:Key="Spacing2400">140</Thickness>
    <Thickness x:Key="Spacing6000">300</Thickness>

    <!-- Control Heights -->
    <x:Double x:Key="ButtonHeight">40</x:Double>
    <x:Double x:Key="ButtonHeightSmall">32</x:Double>
    <x:Double x:Key="ButtonHeightLarge">48</x:Double>
    
    <x:Double x:Key="TextBoxHeight">40</x:Double>
    <x:Double x:Key="TextBoxHeightSmall">32</x:Double>
    
    <!-- Icon Sizes -->
    <x:Double x:Key="IconSize">24</x:Double>
    <x:Double x:Key="IconSizeSmall">16</x:Double>
    <x:Double x:Key="IconSizeLarge">32</x:Double>

</ResourceDictionary>
