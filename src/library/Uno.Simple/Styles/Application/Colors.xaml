<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<!--
		SDS Color Resources using Material-compatible naming
		Based on Figma Simple Design System
		
		These colors use the same key names as Uno.Themes.Material for drop-in compatibility.
		
		Reference: https://platform.uno/docs/articles/external/uno.themes/doc/material-colors.html
	-->

	<!-- Primary/Brand Colors -->
	<Color x:Key="PrimaryColor">#2c2c2c</Color>
	<Color x:Key="PrimaryVariantDarkColor">#1e1e1e</Color>
	<Color x:Key="PrimaryVariantLightColor">#f5f5f5</Color>

	<!-- On Primary (text/icons on primary background) -->
	<Color x:Key="OnPrimaryColor">#f5f5f5</Color>
	<Color x:Key="OnPrimaryMediumColor">#e3e3e3</Color>
	<Color x:Key="OnPrimaryLowColor">#d9d9d9</Color>

	<!-- Surface Colors -->
	<Color x:Key="SurfaceColor">#ffffff</Color>
	<Color x:Key="SurfaceVariantColor">#f5f5f5</Color>

	<!-- Background Colors -->
	<Color x:Key="BackgroundColor">#f5f5f5</Color>
	<Color x:Key="BackgroundSecondaryColor">#f5f5f5</Color>
	<Color x:Key="BackgroundTertiaryColor">#e3e3e3</Color>

	<!-- On Surface (text/icons on surface) -->
	<Color x:Key="OnSurfaceColor">#1e1e1e</Color>
	<Color x:Key="OnSurfaceMediumColor">#757575</Color>
	<Color x:Key="OnSurfaceLowColor">#b3b3b3</Color>
	<Color x:Key="OnSurfaceVariantColor">#767676</Color>

	<!-- On Background -->
	<Color x:Key="OnBackgroundColor">#1e1e1e</Color>
	<Color x:Key="OnBackgroundMediumColor">#757575</Color>
	<Color x:Key="OnBackgroundLowColor">#b3b3b3</Color>

	<!-- Outline/Border Colors -->
	<Color x:Key="OutlineColor">#d9d9d9</Color>
	<Color x:Key="OutlineVariantColor">#767676</Color>

	<!-- Error Colors -->
	<Color x:Key="ErrorColor">#900b09</Color>
	<Color x:Key="OnErrorColor">#ffffff</Color>

	<!-- Disabled State -->
	<Color x:Key="DisabledColor">#d9d9d9</Color>
	<Color x:Key="OnDisabledColor">#b3b3b3</Color>

	<!-- Overlay/Shadow -->
	<Color x:Key="OverlayColor">#000000</Color>

	<!-- Transparent -->
	<Color x:Key="TransparentColor">Transparent</Color>

	<!-- Additional Material-compatible colors for Simple theme -->
	<!-- Tertiary color palette (used for neutral/muted variants) -->
	<Color x:Key="TertiaryColor">#e3e3e3</Color>
	<Color x:Key="TertiaryVariantColor">#cdcdcd</Color>
	<Color x:Key="OnTertiaryColor">#1e1e1e</Color>

	<!-- Secondary color palette -->
	<Color x:Key="SecondaryColor">#f5f5f5</Color>
	<Color x:Key="SecondaryVariantColor">#e3e3e3</Color>
	<Color x:Key="OnSecondaryColor">#1e1e1e</Color>

	<!-- Error/Danger state colors (Material-compatible) -->
	<Color x:Key="ErrorVariantColor">#7a0906</Color>
	<Color x:Key="ErrorContainerColor">#ffe6e5</Color>
	<Color x:Key="OnErrorContainerColor">#900b09</Color>

	<!-- Menu & Flyout Colors (Material-compatible) -->
	<Color x:Key="SurfaceContainerColor">#ffffff</Color>
	<Color x:Key="SurfaceContainerHighColor">#f5f5f5</Color>
	<Color x:Key="SurfaceContainerHighestColor">#e3e3e3</Color>
	<Color x:Key="InverseSurfaceColor">#2c2c2c</Color>
	<Color x:Key="InverseOnSurfaceColor">#f5f5f5</Color>
	<Color x:Key="SurfaceDimColor">#d9d9d9</Color>

	<!-- Slider/Track Colors (Material-compatible) -->
	<Color x:Key="TrackColor">#e6e6e6</Color>
	<Color x:Key="TrackFillColor">#2c2c2c</Color>

	<!-- Input Field Colors (Material-compatible) -->
	<Color x:Key="FieldContainerColor">#ffffff</Color>
	<Color x:Key="FieldOutlineColor">#d9d9d9</Color>

	<!-- Selection Control Colors (Material-compatible) -->
	<Color x:Key="StateLayerColor">#e6e6e6</Color>
	<Color x:Key="StateLayerVariantColor">#737373</Color>

	<!-- Container/Card Colors (Material-compatible) -->
	<Color x:Key="ContainerBorderColor">#d9d9d9</Color>
	<Color x:Key="ScrimColor">#CCffffff</Color>

	<!-- Success Colors (Material-compatible) -->
	<Color x:Key="SuccessColor">#14ae5c</Color>
	<Color x:Key="SuccessVariantColor">#009951</Color>
	<Color x:Key="SuccessContainerColor">#cff7d3</Color>
	<Color x:Key="OnSuccessColor">#ebffee</Color>
	<Color x:Key="OnSuccessContainerColor">#02542d</Color>

	<!-- Warning Colors (Material-compatible) -->
	<Color x:Key="WarningColor">#e8b931</Color>
	<Color x:Key="WarningVariantColor">#e5a000</Color>
	<Color x:Key="WarningContainerColor">#ffe8a3</Color>
	<Color x:Key="OnWarningColor">#401b01</Color>
	<Color x:Key="OnWarningContainerColor">#401b01</Color>

	<!-- Info Colors (Material-compatible) -->
	<Color x:Key="InfoColor">#EC221F</Color>
	<Color x:Key="InfoContainerColor">#FEE9E7</Color>
	<Color x:Key="OnInfoContainerColor">#EC221F</Color>

</ResourceDictionary>
