<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	<!--
		Simple Theme uses system fonts for a clean, native look.
		You can override these by providing custom FontFamily resources.
	-->
	<ResourceDictionary.ThemeDictionaries>
		<ResourceDictionary x:Key="Light">
			<FontFamily x:Key="SimpleFontFamily">Segoe UI</FontFamily>
			<FontFamily x:Key="SimpleRegularFontFamily">Segoe UI</FontFamily>
			<FontFamily x:Key="SimpleMediumFontFamily">Segoe UI Semibold</FontFamily>
			<FontFamily x:Key="SimpleBoldFontFamily">Segoe UI Bold</FontFamily>
		</ResourceDictionary>
		<ResourceDictionary x:Key="Default">
			<FontFamily x:Key="SimpleFontFamily">Segoe UI</FontFamily>
			<FontFamily x:Key="SimpleRegularFontFamily">Segoe UI</FontFamily>
			<FontFamily x:Key="SimpleMediumFontFamily">Segoe UI Semibold</FontFamily>
			<FontFamily x:Key="SimpleBoldFontFamily">Segoe UI Bold</FontFamily>
		</ResourceDictionary>
		<ResourceDictionary x:Key="HighContrast">
			<FontFamily x:Key="SimpleFontFamily">Segoe UI</FontFamily>
			<FontFamily x:Key="SimpleRegularFontFamily">Segoe UI</FontFamily>
			<FontFamily x:Key="SimpleMediumFontFamily">Segoe UI Semibold</FontFamily>
			<FontFamily x:Key="SimpleBoldFontFamily">Segoe UI Bold</FontFamily>
		</ResourceDictionary>
	</ResourceDictionary.ThemeDictionaries>
</ResourceDictionary>
