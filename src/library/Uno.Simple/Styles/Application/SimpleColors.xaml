	
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="/Styles/Application/ColorPalette.xaml" />
		<ResourceDictionary Source="/Styles/Application/Thickness.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<!-- Primary Brushes -->
	<SolidColorBrush x:Key="PrimaryBrush"
					 Color="{StaticResource PrimaryColor}" />
	<SolidColorBrush x:Key="PrimaryVariantDarkBrush"
					 Color="{StaticResource PrimaryVariantDarkColor}" />
	<SolidColorBrush x:Key="PrimaryVariantLightBrush"
					 Color="{StaticResource PrimaryVariantLightColor}" />

	<!-- On Primary Brushes -->
	<SolidColorBrush x:Key="OnPrimaryBrush"
					 Color="{StaticResource OnPrimaryColor}" />
	<SolidColorBrush x:Key="OnPrimaryMediumBrush"
					 Color="{StaticResource OnPrimaryMediumColor}" />
	<SolidColorBrush x:Key="OnPrimaryLowBrush"
					 Color="{StaticResource OnPrimaryLowColor}" />

	<!-- Surface Brushes -->
	<SolidColorBrush x:Key="SurfaceBrush"
					 Color="{StaticResource SurfaceColor}" />
	<SolidColorBrush x:Key="SurfaceVariantBrush"
					 Color="{StaticResource SurfaceVariantColor}" />

	<!-- Background Brushes -->
	<SolidColorBrush x:Key="BackgroundBrush"
					 Color="{StaticResource BackgroundColor}" />
	<SolidColorBrush x:Key="BackgroundSecondaryBrush"
					 Color="{StaticResource BackgroundSecondaryColor}" />
	<SolidColorBrush x:Key="BackgroundTertiaryBrush"
					 Color="{StaticResource BackgroundTertiaryColor}" />

	<!-- On Surface Brushes -->
	<SolidColorBrush x:Key="OnSurfaceBrush"
					 Color="{StaticResource OnSurfaceColor}" />
	<SolidColorBrush x:Key="OnSurfaceMediumBrush"
					 Color="{StaticResource OnSurfaceMediumColor}" />
	<SolidColorBrush x:Key="OnSurfaceLowBrush"
					 Color="{StaticResource OnSurfaceLowColor}" />

	<!-- On Background Brushes -->
	<SolidColorBrush x:Key="OnBackgroundBrush"
					 Color="{StaticResource OnBackgroundColor}" />
	<SolidColorBrush x:Key="OnBackgroundMediumBrush"
					 Color="{StaticResource OnBackgroundMediumColor}" />
	<SolidColorBrush x:Key="OnBackgroundLowBrush"
					 Color="{StaticResource OnBackgroundLowColor}" />

	<!-- Outline Brushes -->
	<SolidColorBrush x:Key="OutlineBrush"
					 Color="{StaticResource OutlineColor}" />
	<SolidColorBrush x:Key="OutlineVariantBrush"
					 Color="{StaticResource OutlineVariantColor}" />

	<!-- Error Brushes -->
	<SolidColorBrush x:Key="ErrorBrush"
					 Color="{StaticResource ErrorColor}" />
	<SolidColorBrush x:Key="OnErrorBrush"
					 Color="{StaticResource OnErrorColor}" />

	<!-- Disabled Brushes -->
	<SolidColorBrush x:Key="DisabledBrush"
					 Color="{StaticResource DisabledColor}" />
	<SolidColorBrush x:Key="OnDisabledBrush"
					 Color="{StaticResource OnDisabledColor}" />

	<!-- Overlay Brushes -->
	<SolidColorBrush x:Key="OverlayBrush"
					 Color="{StaticResource OverlayColor}" />

	<!-- Transparent Brush -->
	<SolidColorBrush x:Key="TransparentBrush"
					 Color="{StaticResource TransparentColor}" />

	<!-- Tertiary Brushes (for neutral/muted variants) -->
	<SolidColorBrush x:Key="TertiaryBrush"
					 Color="{StaticResource TertiaryColor}" />
	<SolidColorBrush x:Key="TertiaryVariantBrush"
					 Color="{StaticResource TertiaryVariantColor}" />
	<SolidColorBrush x:Key="OnTertiaryBrush"
					 Color="{StaticResource OnTertiaryColor}" />

	<!-- Secondary Brushes -->
	<SolidColorBrush x:Key="SecondaryBrush"
					 Color="{StaticResource SecondaryColor}" />
	<SolidColorBrush x:Key="SecondaryVariantBrush"
					 Color="{StaticResource SecondaryVariantColor}" />
	<SolidColorBrush x:Key="OnSecondaryBrush"
					 Color="{StaticResource OnSecondaryColor}" />

	<!-- Error Variant Brushes -->
	<SolidColorBrush x:Key="ErrorVariantBrush"
					 Color="{StaticResource ErrorVariantColor}" />
	<SolidColorBrush x:Key="ErrorContainerBrush"
					 Color="{StaticResource ErrorContainerColor}" />
	<SolidColorBrush x:Key="OnErrorContainerBrush"
					 Color="{StaticResource OnErrorContainerColor}" />

	<!-- Surface/Container Brushes -->
	<SolidColorBrush x:Key="SurfaceContainerBrush"
					 Color="{StaticResource SurfaceContainerColor}" />
	<SolidColorBrush x:Key="SurfaceContainerHighBrush"
					 Color="{StaticResource SurfaceContainerHighColor}" />
	<SolidColorBrush x:Key="SurfaceContainerHighestBrush"
					 Color="{StaticResource SurfaceContainerHighestColor}" />
	<SolidColorBrush x:Key="InverseSurfaceBrush"
					 Color="{StaticResource InverseSurfaceColor}" />
	<SolidColorBrush x:Key="InverseOnSurfaceBrush"
					 Color="{StaticResource InverseOnSurfaceColor}" />
	<SolidColorBrush x:Key="SurfaceDimBrush"
					 Color="{StaticResource SurfaceDimColor}" />

	<!-- Track/Slider Brushes -->
	<SolidColorBrush x:Key="TrackBrush"
					 Color="{StaticResource TrackColor}" />
	<SolidColorBrush x:Key="TrackFillBrush"
					 Color="{StaticResource TrackFillColor}" />

	<!-- Field/Input Brushes -->
	<SolidColorBrush x:Key="FieldContainerBrush"
					 Color="{StaticResource FieldContainerColor}" />
	<SolidColorBrush x:Key="FieldOutlineBrush"
					 Color="{StaticResource FieldOutlineColor}" />

	<!-- State Layer Brushes -->
	<SolidColorBrush x:Key="StateLayerBrush"
					 Color="{StaticResource StateLayerColor}" />
	<SolidColorBrush x:Key="StateLayerVariantBrush"
					 Color="{StaticResource StateLayerVariantColor}" />

	<!-- Container/Card Brushes -->
	<SolidColorBrush x:Key="ContainerBorderBrush"
					 Color="{StaticResource ContainerBorderColor}" />
	<SolidColorBrush x:Key="ScrimBrush"
					 Color="{StaticResource ScrimColor}" />
	<!-- Success Brushes -->
	<SolidColorBrush x:Key="SuccessBrush"
					 Color="{StaticResource SuccessColor}" />
	<SolidColorBrush x:Key="SuccessVariantBrush"
					 Color="{StaticResource SuccessVariantColor}" />
	<SolidColorBrush x:Key="SuccessContainerBrush"
					 Color="{StaticResource SuccessContainerColor}" />
	<SolidColorBrush x:Key="OnSuccessBrush"
					 Color="{StaticResource OnSuccessColor}" />
	<SolidColorBrush x:Key="OnSuccessContainerBrush"
					 Color="{StaticResource OnSuccessContainerColor}" />

	<!-- Warning Brushes -->
	<SolidColorBrush x:Key="WarningBrush"
					 Color="{StaticResource WarningColor}" />
	<SolidColorBrush x:Key="WarningVariantBrush"
					 Color="{StaticResource WarningVariantColor}" />
	<SolidColorBrush x:Key="WarningContainerBrush"
					 Color="{StaticResource WarningContainerColor}" />
	<SolidColorBrush x:Key="OnWarningBrush"
					 Color="{StaticResource OnWarningColor}" />
	<SolidColorBrush x:Key="OnWarningContainerBrush"
					 Color="{StaticResource OnWarningContainerColor}" />

	<!-- Info Brushes -->
	<SolidColorBrush x:Key="InfoBrush"
					 Color="{StaticResource InfoColor}" />
	<SolidColorBrush x:Key="InfoContainerBrush"
					 Color="{StaticResource InfoContainerColor}" />
	<SolidColorBrush x:Key="OnInfoContainerBrush"
					 Color="{StaticResource OnInfoContainerColor}" />

	<!-- State Layer Hover/Pressed Brushes (Material pattern with 8%/12% opacity overlays) -->
	<!-- Primary State Layers (8% = 0x14, 12% = 0x1F alpha) -->
	<SolidColorBrush x:Key="PrimaryHoverBrush"
					 Color="#141E1E1E" />
	<SolidColorBrush x:Key="PrimaryPressedBrush"
					 Color="#1F1E1E1E" />
	<SolidColorBrush x:Key="PrimaryFocusedBrush"
					 Color="#1F1E1E1E" />

	<!-- OnPrimary State Layers -->
	<SolidColorBrush x:Key="OnPrimaryHoverBrush"
					 Color="#14F5F5F5" />
	<SolidColorBrush x:Key="OnPrimaryPressedBrush"
					 Color="#1FF5F5F5" />

	<!-- OnSecondaryContainer State Layers -->
	<SolidColorBrush x:Key="OnSecondaryContainerHoverBrush"
					 Color="#141E1E1E" />
	<SolidColorBrush x:Key="OnSecondaryContainerPressedBrush"
					 Color="#1F1E1E1E" />

	<!-- OnSurface Variant Brush -->
	<SolidColorBrush x:Key="OnSurfaceVariantBrush"
					 Color="{StaticResource OnSurfaceMediumColor}" />

	<!-- OnSurfaceDisabled Brush -->
	<SolidColorBrush x:Key="OnSurfaceDisabledBrush"
					 Color="{StaticResource OnDisabledColor}" />

	<!-- OutlineDisabled Brush -->
	<SolidColorBrush x:Key="OutlineDisabledBrush"
					 Color="{StaticResource OnDisabledColor}" />

	<!-- SecondaryContainer Brushes -->
	<SolidColorBrush x:Key="SecondaryContainerBrush"
					 Color="{StaticResource SecondaryColor}" />
	<SolidColorBrush x:Key="OnSecondaryContainerBrush"
					 Color="{StaticResource OnSecondaryColor}" />

	<!-- SystemControlTransparentBrush -->
	<SolidColorBrush x:Key="SystemControlTransparentBrush"
					 Color="Transparent" />

	<!-- Convenience Aliases -->
	<SolidColorBrush x:Key="DefaultBackgroundBrush"
					 Color="{StaticResource BackgroundColor}" />
	<SolidColorBrush x:Key="ContentBackgroundBrush"
					 Color="{StaticResource BackgroundColor}" />
	<SolidColorBrush x:Key="DefaultTextBrush"
					 Color="{StaticResource OnSurfaceColor}" />
	<SolidColorBrush x:Key="SecondaryTextBrush"
					 Color="{StaticResource OnSurfaceMediumColor}" />
	<SolidColorBrush x:Key="TertiaryTextBrush"
					 Color="{StaticResource OnSurfaceLowColor}" />
	<SolidColorBrush x:Key="BrandTertiaryBrush"
					 Color="{StaticResource PrimaryVariantLightColor}" />
	<SolidColorBrush x:Key="NeutralTertiaryBrush"
					 Color="{StaticResource TertiaryColor}" />

	<!-- Additional state layer opacity brushes for full Material compatibility -->
	<x:Double x:Key="MediumOpacity">0.64</x:Double>
	<x:Double x:Key="LowOpacity">0.38</x:Double>
	<x:Double x:Key="HoverOpacity">0.04</x:Double>
	<x:Double x:Key="PressedOpacity">0.10</x:Double>
	<x:Double x:Key="SelectedOpacity">0.08</x:Double>
	<x:Double x:Key="DraggedOpacity">0.08</x:Double>

	<!-- Selected state brushes -->
	<SolidColorBrush x:Key="PrimarySelectedBrush"
					 Color="#141E1E1E" />
	<SolidColorBrush x:Key="PrimaryDraggedBrush"
					 Color="#141E1E1E" />
	<SolidColorBrush x:Key="OnSurfaceSelectedBrush"
					 Color="{StaticResource OnSurfaceLowColor}" />
	<SolidColorBrush x:Key="OnSurfaceDraggedBrush"
					 Color="{StaticResource OnSurfaceLowColor}" />

	<!-- OnSurfaceVariant hover (used by TextBox and other controls) -->
	<SolidColorBrush x:Key="OnSurfaceVariantHoverBrush"
					 Color="#0A1E1E1E" />

	<!-- Uno.Themes.Material API Compatibility Aliases -->
	<StaticResource x:Key="MaterialPrimaryBrush" ResourceKey="PrimaryBrush" />
	<StaticResource x:Key="MaterialOnPrimaryBrush" ResourceKey="OnPrimaryBrush" />
	<StaticResource x:Key="MaterialBackgroundBrush" ResourceKey="BackgroundBrush" />
	<StaticResource x:Key="MaterialSurfaceBrush" ResourceKey="SurfaceBrush" />

</ResourceDictionary>
