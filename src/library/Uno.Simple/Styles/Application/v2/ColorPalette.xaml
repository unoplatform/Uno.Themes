<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<ResourceDictionary.ThemeDictionaries>

		<!-- Light Theme -->
		<ResourceDictionary x:Key="Light">
			<Color x:Key="MaterialPrimaryColor">#2C2C2C</Color> <!-- brand-800 -->
			<Color x:Key="MaterialPrimaryVariantDarkColor">#1E1E1E</Color> <!-- brand-900 -->
			<Color x:Key="MaterialPrimaryVariantLightColor">#757575</Color> <!-- brand-500 -->
			<Color x:Key="MaterialPrimaryVariantColor">#757575</Color>
			<Color x:Key="MaterialSecondaryColor">#444444</Color> <!-- brand-600 -->
			<Color x:Key="MaterialSecondaryVariantDarkColor">#383838</Color> <!-- brand-700 -->
			<Color x:Key="MaterialSecondaryVariantLightColor">#B3B3B3</Color> <!-- brand-400 -->
			<Color x:Key="MaterialBackgroundColor">#FFFFFF</Color> <!-- white-1000 -->
			<Color x:Key="MaterialSurfaceColor">#FFFFFF</Color> <!-- white-1000 -->
			<Color x:Key="MaterialErrorColor">#EC221F</Color> <!-- red-500 -->
			<Color x:Key="MaterialOnPrimaryColor">#F5F5F5</Color> <!-- brand-100 -->
			<Color x:Key="MaterialOnSecondaryColor">#F5F5F5</Color> <!-- brand-100 -->
			<Color x:Key="MaterialOnBackgroundColor">#1E1E1E</Color> <!-- gray-900 -->
			<Color x:Key="MaterialOnSurfaceColor">#1E1E1E</Color> <!-- gray-900 -->
			<Color x:Key="MaterialOnErrorColor">#FFFFFF</Color> <!-- white-1000 -->
			<Color x:Key="MaterialOverlayColor">#51000000</Color>
			
			<Color x:Key="MaterialPrimaryVariantLowThumbColor">#E6E6E6</Color> <!-- brand-200 -->
			<Color x:Key="MaterialSurfaceVariantLightColor">#F5F5F5</Color> <!-- gray-100 -->

			<Color x:Key="MaterialBottomNavBackgroundColor">#2C2C2C</Color>
			<Color x:Key="MaterialBottomNavForegroundColor">#FFFFFF</Color>

			<Color x:Key="MaterialSliderTrackColor">#D9D9D9</Color> <!-- gray-300 -->
			
			<SolidColorBrush x:Key="MaterialBottomNavPressedBrush"
							 Color="{ThemeResource MaterialOnPrimaryColor}"
							 Opacity="0.10" />
			
			<SolidColorBrush x:Key="MaterialBottomNavUncheckedForegroundBrush"
							 Color="{ThemeResource MaterialOnPrimaryColor}"
							 Opacity="0.60" />
			
			<Color x:Key="MaterialShadowColor">#33000000</Color>
		</ResourceDictionary>

		<!-- Dark Theme -->
		<ResourceDictionary x:Key="Default">
			<Color x:Key="MaterialPrimaryColor">#F5F5F5</Color> <!-- brand-100 -->
			<Color x:Key="MaterialPrimaryVariantDarkColor">#1E1E1E</Color> <!-- brand-900 -->
			<Color x:Key="MaterialPrimaryVariantLightColor">#E6E6E6</Color> <!-- brand-200 -->
			<Color x:Key="MaterialPrimaryVariantColor">#1E1E1E</Color>
			<Color x:Key="MaterialSecondaryColor">#B3B3B3</Color> <!-- brand-400 -->
			<Color x:Key="MaterialSecondaryVariantDarkColor">#757575</Color> <!-- brand-500 -->
			<Color x:Key="MaterialSecondaryVariantLightColor">#D9D9D9</Color> <!-- brand-300 -->
			<Color x:Key="MaterialBackgroundColor">#1E1E1E</Color> <!-- gray-900 -->
			<Color x:Key="MaterialSurfaceColor">#1E1E1E</Color> <!-- gray-900 -->
			<Color x:Key="MaterialErrorColor">#C00F0C</Color> <!-- red-600 -->
			<Color x:Key="MaterialOnPrimaryColor">#1E1E1E</Color> <!-- brand-900 -->
			<Color x:Key="MaterialOnSecondaryColor">#1E1E1E</Color> <!-- brand-900 -->
			<Color x:Key="MaterialOnBackgroundColor">#FFFFFF</Color> <!-- white-1000 -->
			<Color x:Key="MaterialOnSurfaceColor">#FFFFFF</Color> <!-- white-1000 -->
			<Color x:Key="MaterialOnErrorColor">#FFFFFF</Color> <!-- white-1000 -->
			<Color x:Key="MaterialOverlayColor">#51FFFFFF</Color>

			<Color x:Key="MaterialPrimaryVariantLowThumbColor">#444444</Color> <!-- brand-600 -->
			<Color x:Key="MaterialSurfaceVariantLightColor">#2C2C2C</Color> <!-- gray-800 -->

			<Color x:Key="MaterialBottomNavBackgroundColor">#1E1E1E</Color>
			<Color x:Key="MaterialBottomNavForegroundColor">#F5F5F5</Color>

			<Color x:Key="MaterialSliderTrackColor">#444444</Color> <!-- gray-600 -->
			
			<SolidColorBrush x:Key="MaterialBottomNavPressedBrush"
							 Color="{StaticResource MaterialOnSurfaceColor}"
							 Opacity="0.10" />
			
			<SolidColorBrush x:Key="MaterialBottomNavUncheckedForegroundBrush"
							 Color="{StaticResource MaterialOnSurfaceColor}"
							 Opacity="0.60" />

			<Color x:Key="MaterialShadowColor">#33000000</Color>
		</ResourceDictionary>
	</ResourceDictionary.ThemeDictionaries>

	<!-- Opacity for control state overlays -->
	<x:Double x:Key="MaterialMediumOpacity">0.74</x:Double>
	<x:Double x:Key="MaterialHoverOpacity">0.04</x:Double>
	<x:Double x:Key="MaterialLowOpacity">0.38</x:Double>
	<x:Double x:Key="MaterialFocusedOpacity">0.12</x:Double>
	<x:Double x:Key="MaterialPressedOpacity">0.10</x:Double>
	<x:Double x:Key="MaterialDraggedOpacity">0.08</x:Double>
	<x:Double x:Key="MaterialSelectedOpacity">0.08</x:Double>
	
</ResourceDictionary>
