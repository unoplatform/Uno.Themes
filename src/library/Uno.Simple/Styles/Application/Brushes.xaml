<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Uno.Themes.SDS/Styles/Application/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- 
    SDS Brush Resources using Material-compatible naming
    
    These brushes use the same key names as Uno.Themes.Material for drop-in compatibility.
    
    Reference: https://platform.uno/docs/articles/external/uno.themes/doc/material-colors.html
    -->

    <!-- Primary Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}" />
    <SolidColorBrush x:Key="PrimaryVariantDarkBrush" Color="{StaticResource PrimaryVariantDarkColor}" />
    <SolidColorBrush x:Key="PrimaryVariantLightBrush" Color="{StaticResource PrimaryVariantLightColor}" />
    
    <!-- On Primary Brushes -->
    <SolidColorBrush x:Key="OnPrimaryBrush" Color="{StaticResource OnPrimaryColor}" />
    <SolidColorBrush x:Key="OnPrimaryMediumBrush" Color="{StaticResource OnPrimaryMediumColor}" />
    <SolidColorBrush x:Key="OnPrimaryLowBrush" Color="{StaticResource OnPrimaryLowColor}" />

    <!-- Surface Brushes -->
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
    <SolidColorBrush x:Key="SurfaceVariantBrush" Color="{StaticResource SurfaceVariantColor}" />
    
    <!-- Background Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="BackgroundSecondaryBrush" Color="{StaticResource BackgroundSecondaryColor}" />
    <SolidColorBrush x:Key="BackgroundTertiaryBrush" Color="{StaticResource BackgroundTertiaryColor}" />

    <!-- On Surface Brushes -->
    <SolidColorBrush x:Key="OnSurfaceBrush" Color="{StaticResource OnSurfaceColor}" />
    <SolidColorBrush x:Key="OnSurfaceMediumBrush" Color="{StaticResource OnSurfaceMediumColor}" />
    <SolidColorBrush x:Key="OnSurfaceLowBrush" Color="{StaticResource OnSurfaceLowColor}" />
    
    <!-- On Background Brushes -->
    <SolidColorBrush x:Key="OnBackgroundBrush" Color="{StaticResource OnBackgroundColor}" />
    <SolidColorBrush x:Key="OnBackgroundMediumBrush" Color="{StaticResource OnBackgroundMediumColor}" />
    <SolidColorBrush x:Key="OnBackgroundLowBrush" Color="{StaticResource OnBackgroundLowColor}" />

    <!-- Outline Brushes -->
    <SolidColorBrush x:Key="OutlineBrush" Color="{StaticResource OutlineColor}" />
    <SolidColorBrush x:Key="OutlineVariantBrush" Color="{StaticResource OutlineVariantColor}" />
    
    <!-- Error Brushes -->
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ErrorColor}" />
    <SolidColorBrush x:Key="OnErrorBrush" Color="{StaticResource OnErrorColor}" />

    <!-- Disabled Brushes -->
    <SolidColorBrush x:Key="DisabledBrush" Color="{StaticResource DisabledColor}" />
    <SolidColorBrush x:Key="OnDisabledBrush" Color="{StaticResource OnDisabledColor}" />
    
    <!-- Overlay Brushes -->
    <SolidColorBrush x:Key="OverlayBrush" Color="{StaticResource OverlayColor}" />
    
    <!-- Transparent Brush -->
    <SolidColorBrush x:Key="TransparentBrush" Color="{StaticResource TransparentColor}" />

    <!-- Additional SDS Brushes (custom extensions) -->
    <SolidColorBrush x:Key="SDSBrandDefaultBrush" Color="{StaticResource SDSBrandDefaultColor}" />
    <SolidColorBrush x:Key="SDSBrandHoverBrush" Color="{StaticResource SDSBrandHoverColor}" />
    <SolidColorBrush x:Key="SDSNeutralTertiaryBrush" Color="{StaticResource SDSNeutralTertiaryColor}" />
    <SolidColorBrush x:Key="SDSNeutralTertiaryHoverBrush" Color="{StaticResource SDSNeutralTertiaryHoverColor}" />
    <SolidColorBrush x:Key="SDSNeutralTertiaryDarkerBrush" Color="{StaticResource SDSNeutralTertiaryDarkerColor}" />
    <SolidColorBrush x:Key="SDSBorderNeutralBrush" Color="{StaticResource SDSBorderNeutralColor}" />
    <SolidColorBrush x:Key="SDSBorderNeutralDarkerBrush" Color="{StaticResource SDSBorderNeutralDarkerColor}" />
    <SolidColorBrush x:Key="SDSTextNeutralBrush" Color="{StaticResource SDSTextNeutralColor}" />
    <SolidColorBrush x:Key="SDSDangerPrimaryBrush" Color="{StaticResource SDSDangerPrimaryColor}" />
    <SolidColorBrush x:Key="SDSDangerPrimaryHoverBrush" Color="{StaticResource SDSDangerPrimaryHoverColor}" />
    <SolidColorBrush x:Key="SDSDangerSubtleTextBrush" Color="{StaticResource SDSDangerSubtleTextColor}" />
    <SolidColorBrush x:Key="SDSDangerSubtleHoverBackgroundBrush" Color="{StaticResource SDSDangerSubtleHoverBackgroundColor}" />
    
    <!-- Menu & Component Brushes -->
    <SolidColorBrush x:Key="SDSMenuBackgroundBrush" Color="{StaticResource SDSMenuBackgroundColor}" />
    <SolidColorBrush x:Key="SDSMenuBorderBrush" Color="{StaticResource SDSMenuBorderColor}" />
    <SolidColorBrush x:Key="SDSMenuItemHoverBackgroundBrush" Color="{StaticResource SDSMenuItemHoverBackgroundColor}" />
    <SolidColorBrush x:Key="SDSMenuItemHoverTextBrush" Color="{StaticResource SDSMenuItemHoverTextColor}" />
    <SolidColorBrush x:Key="SDSMenuItemDisabledBrush" Color="{StaticResource SDSMenuItemDisabledColor}" />
    <SolidColorBrush x:Key="SDSMenuHeaderSecondaryBrush" Color="{StaticResource SDSMenuHeaderSecondaryColor}" />
    <SolidColorBrush x:Key="SDSMenuSeparatorBrush" Color="{StaticResource SDSMenuSeparatorColor}" />
    
    <!-- Slider Brushes -->
    <SolidColorBrush x:Key="SDSSliderTrackBrush" Color="{StaticResource SDSSliderTrackColor}" />
    <SolidColorBrush x:Key="SDSSliderFillBrush" Color="{StaticResource SDSSliderFillColor}" />
    <SolidColorBrush x:Key="SDSSliderHandleBrush" Color="{StaticResource SDSSliderHandleColor}" />
    <SolidColorBrush x:Key="SDSSliderDisabledTrackBrush" Color="{StaticResource SDSSliderDisabledTrackColor}" />
    <SolidColorBrush x:Key="SDSSliderDisabledFillBrush" Color="{StaticResource SDSSliderDisabledFillColor}" />
    <SolidColorBrush x:Key="SDSSliderDisabledHandleBrush" Color="{StaticResource SDSSliderDisabledHandleColor}" />
    
    <!-- Input Field Brushes -->
    <SolidColorBrush x:Key="SDSInputBackgroundBrush" Color="{StaticResource SDSInputBackgroundColor}" />
    <SolidColorBrush x:Key="SDSInputBorderBrush" Color="{StaticResource SDSInputBorderColor}" />
    <SolidColorBrush x:Key="SDSInputDisabledBackgroundBrush" Color="{StaticResource SDSInputDisabledBackgroundColor}" />
    <SolidColorBrush x:Key="SDSInputDisabledBorderBrush" Color="{StaticResource SDSInputDisabledBorderColor}" />
    <SolidColorBrush x:Key="SDSInputDisabledTextBrush" Color="{StaticResource SDSInputDisabledTextColor}" />
    
    <!-- RadioButton Brushes -->
    <SolidColorBrush x:Key="SDSRadioOuterRingDefaultBrush" Color="{StaticResource SDSRadioOuterRingDefaultColor}" />
    <SolidColorBrush x:Key="SDSRadioInnerDotBrush" Color="{StaticResource SDSRadioInnerDotColor}" />
    <SolidColorBrush x:Key="SDSRadioOuterRingStrokeBrush" Color="{StaticResource SDSRadioOuterRingStrokeColor}" />
    <SolidColorBrush x:Key="SDSRadioUncheckedOuterRingBrush" Color="{StaticResource SDSRadioUncheckedOuterRingColor}" />
    <SolidColorBrush x:Key="SDSRadioDisabledOuterRingBrush" Color="{StaticResource SDSRadioDisabledOuterRingColor}" />
    <SolidColorBrush x:Key="SDSRadioDisabledStrokeBrush" Color="{StaticResource SDSRadioDisabledStrokeColor}" />
    <SolidColorBrush x:Key="SDSRadioDisabledInnerDotBrush" Color="{StaticResource SDSRadioDisabledInnerDotColor}" />
    
    <!-- Card Brushes -->
    <SolidColorBrush x:Key="SDSCardBorderBrush" Color="{StaticResource SDSCardBorderColor}" />
    <SolidColorBrush x:Key="SDSCardBackgroundLightBrush" Color="{StaticResource SDSCardBackgroundLightColor}" />
    
    <!-- Dialog Brushes -->
    <SolidColorBrush x:Key="SDSDialogBorderBrush" Color="{StaticResource SDSDialogBorderColor}" />
    <SolidColorBrush x:Key="SDSDialogScrimBrush" Color="{StaticResource SDSDialogScrimColor}" />
    <SolidColorBrush x:Key="SDSSecondaryButtonBackgroundBrush" Color="{StaticResource SDSSecondaryButtonBackgroundColor}" />
    <SolidColorBrush x:Key="SDSSecondaryButtonBorderBrush" Color="{StaticResource SDSSecondaryButtonBorderColor}" />
  <!-- Matrix Identifier Brushes -->
  <SolidColorBrush x:Key="SDSMatrixIdentifierTextBrush" Color="{StaticResource SDSMatrixIdentifierTextColor}" />
  <SolidColorBrush x:Key="SDSMatrixIdentifierBackgroundBrush" Color="{StaticResource SDSMatrixIdentifierBackgroundColor}" />
  <SolidColorBrush x:Key="SDSMatrixIdentifierBorderBrush" Color="{StaticResource SDSMatrixIdentifierBorderColor}" />

  <!-- Navigation Brushes -->
  <SolidColorBrush x:Key="SDSNavSecondaryTextBrush" Color="{StaticResource SDSNavSecondaryTextColor}" />
  <SolidColorBrush x:Key="SDSNavActiveTextBrush" Color="{StaticResource SDSNavActiveTextColor}" />
  <SolidColorBrush x:Key="SDSNavHoverBackgroundBrush" Color="{StaticResource SDSNavHoverBackgroundColor}" />
  <SolidColorBrush x:Key="SDSNavPillActiveBackgroundBrush" Color="{StaticResource SDSNavPillActiveBackgroundColor}" />
  <SolidColorBrush x:Key="SDSNavPillActiveTextBrush" Color="{StaticResource SDSNavPillActiveTextColor}" />

  <!-- Notification Brushes -->
  <SolidColorBrush x:Key="SDSNotificationAlertBackgroundBrush" Color="{StaticResource SDSNotificationAlertBackgroundColor}" />
  <SolidColorBrush x:Key="SDSNotificationAlertBorderBrush" Color="{StaticResource SDSNotificationAlertBorderColor}" />
  <SolidColorBrush x:Key="SDSNotificationAlertButtonBrush" Color="{StaticResource SDSNotificationAlertButtonColor}" />

  <!-- Pagination Brushes -->
  <SolidColorBrush x:Key="SDSPaginationDefaultBackgroundBrush" Color="{StaticResource SDSPaginationDefaultBackgroundColor}" />
  <SolidColorBrush x:Key="SDSPaginationHoverBackgroundBrush" Color="{StaticResource SDSPaginationHoverBackgroundColor}" />
  <SolidColorBrush x:Key="SDSPaginationCurrentBackgroundBrush" Color="{StaticResource SDSPaginationCurrentBackgroundColor}" />
  <SolidColorBrush x:Key="SDSPaginationCurrentHoverBackgroundBrush" Color="{StaticResource SDSPaginationCurrentHoverBackgroundColor}" />
  <SolidColorBrush x:Key="SDSPaginationCurrentTextBrush" Color="{StaticResource SDSPaginationCurrentTextColor}" />
  <SolidColorBrush x:Key="SDSPaginationDisabledTextBrush" Color="{StaticResource SDSPaginationDisabledTextColor}" />

  <!-- Badge Brushes -->
  <SolidColorBrush x:Key="SDSSuccessBadgeBackgroundBrush" Color="{StaticResource SDSSuccessBadgeBackgroundColor}" />
  <SolidColorBrush x:Key="SDSSuccessBadgeTextBrush" Color="{StaticResource SDSSuccessBadgeTextColor}" />

    <!-- Convenience Aliases (backward compatibility / common usage) -->
    <SolidColorBrush x:Key="DefaultBackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="ContentBackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="DefaultTextBrush" Color="{StaticResource OnSurfaceColor}" />
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="{StaticResource OnSurfaceMediumColor}" />
    <SolidColorBrush x:Key="TertiaryTextBrush" Color="{StaticResource OnSurfaceLowColor}" />
    <SolidColorBrush x:Key="BrandTertiaryBrush" Color="{StaticResource PrimaryVariantLightColor}" />
    <SolidColorBrush x:Key="NeutralTertiaryBrush" Color="{StaticResource SDSNeutralTertiaryColor}" />

    <!-- Uno.Themes.Material API Compatibility Aliases -->
    <StaticResource x:Key="MaterialPrimaryBrush" ResourceKey="PrimaryBrush" />
    <StaticResource x:Key="MaterialOnPrimaryBrush" ResourceKey="OnPrimaryBrush" />
    <StaticResource x:Key="MaterialBackgroundBrush" ResourceKey="BackgroundBrush" />
    <StaticResource x:Key="MaterialSurfaceBrush" ResourceKey="SurfaceBrush" />

</ResourceDictionary>
