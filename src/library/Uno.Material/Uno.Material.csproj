<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="MSBuild.Sdk.Extras/3.0.23">
	<PropertyGroup>
		<TargetFrameworks>netstandard2.0;xamarinios10;monoandroid10.0;monoandroid11.0;xamarinmac20</TargetFrameworks>
		<AllowedOutputExtensionsInPackageBuildOutputFolder>.pdb</AllowedOutputExtensionsInPackageBuildOutputFolder>
		<DebugSymbols>true</DebugSymbols>
		<DebugType>portable</DebugType>
		<GenerateLibraryLayout>true</GenerateLibraryLayout>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="DotNet.ReproducibleBuilds" Version="0.1.26" PrivateAssets="All" />
	</ItemGroup>

	<ItemGroup>
		<UnoSourceGeneratorAdditionalProperty Include="UseWinUI" />
	</ItemGroup>

	<ItemGroup>
		<LottieJson Include="Assets\MaterialDeterminate.json" />
		<LottieJson Include="Assets\MaterialIndeterminate.json" />

		<XamlExclusion Condition="'$(UseWinUI)'=='true'" Include="Styles\Controls\NavigationView\WUX\**\*.xaml" />
		<XamlExclusion Condition="'$(TargetFramework)'=='net5.0-windows10.0.18362'" Include="Styles\Controls\ProgressRing.xaml" />
	</ItemGroup>

	<Choose>
		<When Condition="'$(UseWinUI)'=='true'">

			<PropertyGroup>
				<DefineConstants>WinUI</DefineConstants>
				<DefineConstants Condition="'$(TargetFramework)'=='net5.0-windows10.0.18362'">$(DefineConstants);WinUI_Desktop</DefineConstants>
				<PackageId>Uno.Material.WinUI</PackageId>
				<TargetFrameworks>$(TargetFrameworks);net5.0-windows10.0.18362</TargetFrameworks>
			</PropertyGroup>

			<ItemGroup>
				<PackageReference Include="Uno.WinUI" Version="4.0.0-dev.5407" />

				<PackageReference Include="Uno.WinUI.Lottie" Version="4.0.0-dev.5407" Condition="'$(TargetFramework)'!='net5.0-windows10.0.18362'" />

				<PackageReference Include="Microsoft.ProjectReunion" Version="0.5.6" Condition="'$(TargetFramework)'=='net5.0-windows10.0.18362'" />

				<FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" RuntimeFrameworkVersion="10.0.18362.21" Condition="'$(TargetFramework)'=='net5.0-windows10.0.18362'" />
				<FrameworkReference Update="Microsoft.Windows.SDK.NET.Ref" TargetingPackVersion="10.0.18362.21" Condition="'$(TargetFramework)'=='net5.0-windows10.0.18362'" />
			</ItemGroup>

			<ItemGroup Condition="'$(TargetFramework)'=='net5.0-windows10.0.18362'">
				<Content Include="@(LottieJson)" />
			</ItemGroup>
			<ItemGroup Condition="'$(TargetFramework)'!='net5.0-windows10.0.18362'">
				<EmbeddedResource Include="@(LottieJson)" />
			</ItemGroup>

			<ItemGroup Condition="'$(TargetFramework)'=='net5.0-windows10.0.18362'">
				<Page Remove="@(XamlExclusion)" />
			</ItemGroup>

			<ItemGroup Condition="'$(TargetFramework)'!='net5.0-windows10.0.18362'">
				<Page Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
				<Page Remove="@(XamlExclusion)" />

				<Compile Update="**\*.xaml.cs">
					<DependentUpon>%(Filename)</DependentUpon>
				</Compile>
			</ItemGroup>

		</When>
		<Otherwise>

			<PropertyGroup>
				<PackageId>Uno.Material</PackageId>
				<TargetFrameworks Condition="'$(OS)'=='Windows_NT'">$(TargetFrameworks);uap10.0.18362</TargetFrameworks>
			</PropertyGroup>

			<ItemGroup>
				<PackageReference Include="Uno.UI" Version="4.0.0-dev.5455" />
			</ItemGroup>
			<ItemGroup Condition="'$(TargetFramework)'=='uap10.0.18362'">
				<PackageReference Include="Microsoft.UI.Xaml" Version="2.6.0-prerelease.210113001" />
				<PackageReference Include="Microsoft.Toolkit.Uwp.UI.Lottie" Version="6.1.0" />
			</ItemGroup>
			<ItemGroup Condition="'$(TargetFramework)'!='uap10.0.18362'">
				<PackageReference Include="Uno.UI.Lottie" Version="4.0.0-dev.5455" />
			</ItemGroup>


			<ItemGroup Condition="'$(TargetFramework)'=='uap10.0.18362'">
				<Content Include="@(LottieJson)" />
			</ItemGroup>
			<ItemGroup Condition="'$(TargetFramework)'!='uap10.0.18362'">
				<EmbeddedResource Include="@(LottieJson)" />
			</ItemGroup>

			<ItemGroup>
				<Page Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
				<Page Remove="@(XamlExclusion)" />

				<Compile Update="**\*.xaml.cs">
					<DependentUpon>%(Filename)</DependentUpon>
				</Compile>
				<Content Include="build\Uno.Material.targets" Pack="true" PackagePath="build" />
			</ItemGroup>

		</Otherwise>
	</Choose>

	<ItemGroup>
		<UpToDateCheckInput Include="**\*.xaml" Exclude="bin\**\*.xaml;obj\**\*.xaml" />
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Include="LinkerConfig.xml">
			<LogicalName>$(AssemblyName).xml</LogicalName>
		</EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
		<None Update="Styles\Controls\Button.xaml">
			<Generator>MSBuild:Compile</Generator>
		</None>
		<None Update="Styles\Controls\Card.xaml">
			<Generator>MSBuild:Compile</Generator>
		</None>
		<None Update="Styles\Controls\CheckBox.xaml">
			<Generator>MSBuild:Compile</Generator>
		</None>
		<None Update="Styles\Controls\CommandBar.xaml">
			<Generator>MSBuild:Compile</Generator>
		</None>
		<None Update="Styles\Controls\ExpandingBottomSheet.xaml">
			<Generator>MSBuild:Compile</Generator>
		</None>
		<None Update="Styles\Controls\RadioButton.xaml">
			<Generator>MSBuild:Compile</Generator>
		</None>
		<None Update="Styles\Controls\TextBox.xaml">
			<Generator>MSBuild:Compile</Generator>
		</None>
	</ItemGroup>
</Project>