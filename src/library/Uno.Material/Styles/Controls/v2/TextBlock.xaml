        <Setter Property="CharacterSpacing"
                Value="41.666" />
    </Style>

    <!--  Label Small  -->
    <Style x:Key="M3MaterialLabelSmall"
           BasedOn="{StaticResource M3MaterialBaseTextBlockStyle}"
           TargetType="TextBlock">

        <Setter Property="FontSize"
                Value="11" />
