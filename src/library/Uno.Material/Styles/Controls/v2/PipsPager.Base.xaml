		   TargetType="Button"
		   BasedOn="{StaticResource MaterialPipsPagerNavigationButtonBaseStyle}">
		<Setter Property="Content"
				Value="{StaticResource MaterialPipsPagerPreviousPageButtonData}" />
		<Setter Property="VerticalContentAlignment"
