	<!-- Material PipsPager Resources -->

	<x:Double x:Key="MaterialPipsPagerHorizontalOrientationButtonWidth">12</x:Double>
	<x:Double x:Key="MaterialPipsPagerHorizontalOrientationButtonHeight">12</x:Double>

	<x:Double x:Key="MaterialPipsPagerVerticalOrientationButtonWidth">12</x:Double>
	<x:Double x:Key="MaterialPipsPagerVerticalOrientationButtonHeight">12</x:Double>

	<Thickness x:Key="MaterialPipsPagerButtonBorderThickness">0</Thickness>
	<Thickness x:Key="MaterialPipsPagerNavigationButtonBorderThickness">0</Thickness>

	<x:String x:Key="MaterialPipsPagerPreviousPageButtonData">M3.33681 0.322148C3.63156 -0.107383 4.36844 -0.107382 4.66319 0.322148L7.89626 5.03356C8.19101 5.46309 7.82257 6 7.23307 6L0.766932 6C0.177427 6 -0.191014 5.46309 0.103739 5.03356L3.33681 0.322148Z</x:String>
	<x:String x:Key="MaterialPipsPagerNextPageButtonData">M4.66319 5.67785C4.36844 6.10738 3.63156 6.10738 3.33681 5.67785L0.103738 0.966444C-0.191015 0.536913 0.177425 6.83871e-07 0.766931 6.32335e-07L7.23307 6.70473e-08C7.82257 1.55111e-08 8.19101 0.536912 7.89626 0.966443L4.66319 5.67785Z</x:String>

	<x:Double x:Key="MaterialPipsPagerNavigationButtonHeight">40</x:Double>
	<x:Double x:Key="MaterialPipsPagerNavigationButtonWidth">40</x:Double>

